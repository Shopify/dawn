.general-product .title {
	margin: 0 0 16px 0;
}

.general-product .title {
	font-family: 'TrimPosterWebCompressed', sans-serif;
	font-weight: 400;
	color: #000;
	margin: 0 0 20px 0;
	font-size: calc(10vw + 22px);
	line-height: calc(9vw + 14px);
}

.owl-carousel{
    /* max-width: 904px; */
}

.general-product-info .socials{
    display: none;
}
.mobile-socials .socials{
    display: flex;
}

@media only screen and (min-width: 1064px) {
	.general-product .title {
		font-size: 128px;
		line-height: 106px;
		margin: 20px 0 40px 0;
	}
    .general-product-info .socials{ 
        display: flex;
    }

    .mobile-socials .socials{
        display: none;
    }
}

.gallery {
    padding: 20px 0;
    padding-top: 0;
}
.owl-carousel .owl-item img{
    padding: 25px;
    border-radius: 40px;
}

.owl-carousel{
    max-width: 904px;
    margin: 0 auto;
}

body{
    overflow-x: hidden;
}