article {
  max-width: 904px;
  margin: 0 auto;
  padding: 40px;
}


.gallery-details {
  display: flex;
  /* align-items: center; */
  margin-top: 20px;
}

.socials {
  display: flex;
}

.socials a{
  text-decoration: none;
  height: 24px;
  display: inline-block;
}

.socials img{
  opacity: 0.6;
  cursor: pointer;
}

.socials img:hover{
  opacity: 1;
}

.gallery-details__image{
  width: 280px;
  height: 560px;

  background-size: cover;
  background-position: center;
  overflow: hidden;
  position: relative;
}

::placeholder {
	color: #cccccc;
	opacity: 1;
}

.selector-container{
  background-color: #eaeaea;
}

.option-buttons {
  display: flex;
  margin-bottom: 20px;
  background-color: #eaeaea;
  
}

.option-button {
  flex: 1;
  padding: 18px;
  border-radius: 12px;
  cursor: pointer;
  text-align: center;
  font-family: "Raleway-Bold", sans-serif;
  font-size: 16px;
  transition: background-color 0.3s ease;
  margin-right: -2px; /* to overlap the border and make buttons touch */
}

.option-button.selected:first-child {
  border: 1px solid #000;
  background-color: #fff;
  border-bottom-right-radius: 12px;
  border-top-right-radius: 12px;
}

.option-button.selected:last-child {
  border: 1px solid #000;
  background-color: #fff;
  border-bottom-left-radius: 12px;
  border-top-left-radius: 12px;
}

.option-button:first-child {
  border-bottom-right-radius: 0;
  border-top-right-radius: 0;
  border-right: 0px solid #000;
}

.option-button:last-child {
  margin-right: 0; /* remove margin for the last button */
  border-bottom-left-radius: 0;
  border-top-left-radius: 0;
  border-left: 0px solid #000;
}

.option-button:hover {
  background-color: #e0e0e0;
}

.option-button.selected {
  background-color: #000;
  color: #fff;
}

span.decorative {
	display: block;
	position: absolute;
	overflow: hidden;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
}

span.decorative:after {
	content: '';
	position: absolute;
	display: block;
	border-radius: 50%;
	opacity: 0.95;
	z-index: 1;
  width: 111%;
  height: 33%;
  bottom: -8%;
  left: -9%;
}

.simple span.decorative:after {
	width: 20vw;
	height: 20vw;
	top: 80%;
	left: -10%;
}

.bottle-visuals .simple span.decorative:after {
	width: 140px;
	height: 140px;
	top: 80%;
	left: -30%;
}

.bottle .bottle-shape {
	background-image: url(https://www.drewnotweird.com/whiskyblender/images/bottle-shape.png);
	background-size: cover;
	background-repeat: no-repeat;
	background-position: center;
	display: block;
	width: 100%;
	height: 100%;
	position: absolute;
	z-index: 10;
	top: 0;
	left: 0;
}

.bottle-blend {
	display: block;
	width: 100%;
	height: 100%;
	position: relative;
}

.product-details {
  padding: 0 60px;
}

.mobile-titles h1, .desktop-titles h1{
  font-family: 'TrimPosterWebCompressed';
  font-size: 128px;
  line-height: 106px;
  color: #000;
  margin: 0;
  padding: 0;

  margin-bottom: 40px;

}
.progress-bar-inner b{
  color: black !important;
  min-width: max-content;
  height: 44px;
  display: flex;
  align-items: center;
  margin-left: 16px;
  font-family: "Raleway-Bold", sans-serif;
  font-size: 16px;
  font-weight: 600;
}

.mobile-titles h3, .desktop-titles h3{
  max-width: 340px;
  font-size: 20px;
  font-family: "Raleway-Bold", sans-serif;
  font-weight: 700;
  margin: 0;
  padding: 0;
}

.desktop-titles{
  display: block;
}

.mobile-titles{
  display: none;
}

.bottle {
  width: 280px;
  height: 560px;
}
@media only screen and (max-width: 600px){
  .mobile-titles h1{
    font-size: 40px;
    line-height: 40px;
  }

  .mobile-titles h3{
    font-size: 16px;
  }

  html body .mobile-titles{
    margin-left: 0px;
  }

  html body .gallery-details .bottle {
    width: 100px;
    height: 270px;
    min-width: 100px;
  }

  html body .progress-bar-inner b{
    font-size: 12px;
  }

  html body .product-details {
    padding: 0 20px;
  
  }

  html body .progress-bar-inner b{
    height: 32px;
  }

  html body .progress-bar-inner{
    height: 32px;
  
  }

  html body .progress-bar{
    height: 32px;
  }
}

@media only screen and (max-width: 1064px){
  .mobile-titles{
      display: block;
      margin-left: 40px;
  }

  html body .progress-bar{
    min-width: Calc(56vw - 60px);
  }

  .product-details{
    padding: 0 40px;
  }

  .gallery-details{
    align-items: center;
  }

  .mobile-titles h1{
    font-size: calc(10vw + 22px);
    line-height: calc(9vw + 14px);
  }
  
  .mobile-titles h3{
  
  }
}

.option-title{
  font-family: "Raleway-Bold", sans-serif;
  font-size: 20px;
  font-weight: 700;
  margin: 0;
  padding: 0;
  margin-bottom: 16px;
}

@media only screen and (min-width: 600px) and  (max-width: 1064px){
	.bottle-visuals .simple span.decorative:after {
		width: 240px;
		height: 240px;
		top: 75%;
		left: 0;
	}

  html body .gallery-details .bottle {
    width: 180px;
    height: 400px;
    min-width: 180px;
  }
}

@media only screen and (min-width: 1024px) {
	.simple span.decorative:after {
		width: 200px;
		height: 200px;
	}
}

@media only screen and (min-width: 1064px) {
	.bottle-visuals .simple span.decorative:after {
		width: 340px;
		height: 340px;
	}

}

@media only screen and (max-width: 1064px) {
  .desktop-titles{
    display: none;
  }
}


.selector-container h4 {
	margin: 0 0 16px 0;
}

.selector-container h4  {
	font-size: 20px;
}

::placeholder {
	color: #cccccc;
	opacity: 1;
}

.quantity:after{
  border:none !important;
  box-shadow: none !important;
}

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

input[type=number] {
  -moz-appearance: textfield;
  outline: none;
}

input[type=number]:focus-visible{
  box-shadow: none !important;
}

@media only screen and (min-width: 1064px) {

	#bottle-page h4 {
		max-width: 340px;
	}
}

/*! CSS Used from: https://www.drewnotweird.com/whiskyblender/css/basket.css */
.buying-option {
	margin: 20px 0 40px 0;
}

.segmented-control {
	display: flex;
	position: relative;
	user-select: none;
	position: relative;
	font-size: 16px;
	line-height: 24px;
	font-weight: 700;
	border-radius: 12px;
	overflow: hidden;
	color: #000000;
	background-color: rgba(255, 255, 255, 0.4);
	border: solid 1px rgba(0, 0, 0, 0.1);
	margin: 0 -20px;
}

.segmented-control>input {
	display: none;
}

.segmented-control label {
	flex: 1;
	text-align: center;
	overflow: hidden;
	text-overflow: ellipsis;
	cursor: pointer;
	padding: 18px;
	border-radius: 12px;
	background-color: rgba(255, 255, 255, 0);
	border: solid 1px rgba(0, 0, 0, 0);
	transition: background-color 0.2s, border 0.2s, font-size 0.2s;
}

.segmented-control>input:checked+label {
	color: #000000;
	background-color: #ffffff;
	font-size: 18px;
	border: solid 1px #000000;
}

@media only screen and (min-width: 600px) {
	.segmented-control {
		margin: 0;
	}
}

.buy-this {
	margin: 0 -20px;
	padding: 20px;
	background: #ffffff;
	border-radius: 20px;
}

.summary {
	font-weight: 700;
	font-size: 24px;
	padding: 20px 0;
	display: flex;
	margin-bottom: 20px;
	flex-direction: column;
	flex-wrap: nowrap;
	gap: 30px;
	justify-content: space-between;
	align-items: center;
}

.pulse {
	animation: pulse-animation 2s infinite;
}

button {
	border: none;
	margin: 0;
	padding: 0;
	width: auto;
	overflow: visible;
	background: transparent;
	color: inherit;
	font: inherit;
	-webkit-font-smoothing: inherit;
	-moz-osx-font-smoothing: inherit;
	-webkit-appearance: none;
	font-size: 24px;
	line-height: 28px;
	border-radius: 12px;
	background-color: #199776;
	color: #ffffff;
	display: block;
	padding: 20px;
	transition: background-color 0.3s, border 0.3s;
	font-weight: 700;
	text-decoration: none;
	width: 100%;
	cursor: pointer;
}

button:hover {
	background-color: #237f5e;
}

::placeholder {
	color: #cccccc;
	opacity: 1;
}

@media only screen and (min-width: 600px) {
	.summary {
		font-size: 32px;
		padding: 40px;
		flex-direction: row;
		align-items: center;
	}


}

.quantity {
	width: 180px;
	font-size: 0;
}

.quantity button,
.quantity input {
	width: 60px;
	height: 60px;
	padding: 0;
	margin: 0;
	text-align: center;
	vertical-align: middle;
	display: inline-block;
	font-size: 18px;
}

.quantity input {
	width: 58px;
	height: 60px;
	padding: 0;
	margin: 0;
	text-align: center;
	vertical-align: middle;
	border: 1px solid #aaaaaa;
	;
	display: inline-block;
	border-radius: 0;
}

.quantity input[type=number] {
	-moz-appearance: textfield;
}

.quantity button {
	background-color: #222222;
	background-repeat: no-repeat;
	background-position: center;
	transition: background-color 0.3s;
}

.quantity button:hover {
	background-color: #000000;
}

.quantity button.remove-quantity {
	border-radius: 12px 0 0 12px;
	background-image: url(https://www.drewnotweird.com/whiskyblender/images/icons/remove.svg);
}

.quantity button.add-quantity {
	border-radius: 0 12px 12px 0;
	background-image: url(https://www.drewnotweird.com/whiskyblender/images/icons/add.svg);
}

/*! CSS Used keyframes */
@keyframes pulse-animation {
	0% {
		box-shadow: 0 0 0 0px rgba(25, 151, 118, 1);
	}

	100% {
		box-shadow: 0 0 0 16px rgba(25, 151, 118, 0);
	}
}


.general-product-info {
  display: flex; 
  justify-content: space-between; 
  width: 100%; 
  align-items:center;
}

.general-product-info h3{
  text-underline-offset: 5px;
  text-decoration: underline;
  text-decoration-thickness: 2px;

  font-family: "Raleway-Bold", sans-serif;
  font-size: 20px;
  font-weight: 100;
  margin: 0;
}