    "16604612272b74cc1f": {
      "type": "rich-text",
      "blocks": {
        "1660461227266cb95c-0": {
          "type": "heading",
          "settings": {
            "heading": "Noise sensitivity (hyperacusis)",
            "heading_size": "h2"
          }
        },
        "1660461227266cb95c-1": {
          "type": "text",
          "settings": {
            "text": "<p>Noise sensitivity, or hyperacusis, is where many noises may seem louder and more overwhelming than they do to others, and sufferers can experience significant stress, panic, or anger as a result.<\/p>"
          }
        },
        "b6b50ba2-ba34-4929-9818-326b6ce694c2": {
          "type": "heading",
          "settings": {
            "heading": "How to reduce noise sensitivity anxiety",
            "heading_size": "h1"
          }
        }
      },
      "block_order": [
        "1660461227266cb95c-0",
        "1660461227266cb95c-1",
