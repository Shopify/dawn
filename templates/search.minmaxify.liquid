{% layout none %}
[
    {%- for item in cart.items -%}
    {
        "id": {{ item.id }},
        "product_id": {{ item.product_id }},
        "variant_id": {{ item.variant_id }},
        "collection": {{ item.product.collections | map: 'id' | json }},
        "tag": {{ item.product.tags | json }}
    }{% unless forloop.last == true %},{% endunless %}
    {%- endfor -%}
]
