<div class="reserve-wrapper" style="border:1px solid rgba(212,175,55,.35);padding:1rem;border-radius:14px;margin-top:1rem">
  <h3 style="color:#D4AF37;margin-bottom:.5rem">Reserve this item</h3>

  {% form 'contact', id: 'ReserveForm' %}
    <input type="hidden" name="form_type" value="reserve">
    <input type="hidden" name="contact[Product]" value="{{ product.title }}">
    <input type="hidden" name="contact[Variant]" value="{{ product.selected_or_first_available_variant.title | default: 'Default' }}">
    <input type="hidden" name="contact[SKU]" value="{{ product.selected_or_first_available_variant.sku }}">
    <input type="hidden" name="contact[URL]" value="{{ product.url | absolute_url }}">

    <div style="display:grid;gap:.6rem">
      <input name="contact[Name]" type="text" placeholder="Your name" required
             style="padding:.7rem;border-radius:10px;border:1px solid rgba(212,175,55,.35);background:#000;color:#fafafa">
      <input name="contact[Email]" type="email" placeholder="Email for invoice" required
             style="padding:.7rem;border-radius:10px;border:1px solid rgba(212,175,55,.35);background:#000;color:#fafafa">
      <input name="contact[Quantity]" type="number" min="1" value="1"
             style="padding:.7rem;border-radius:10px;border:1px solid rgba(212,175,55,.35);background:#000;color:#fafafa">
      <textarea name="contact[Notes]" rows="3" placeholder="Notes (color, timing, etc.)"
                style="padding:.7rem;border-radius:10px;border:1px solid rgba(212,175,55,.35);background:#000;color:#fafafa"></textarea>
      <label style="color:#c9b57a;font-size:.9rem"><input type="checkbox" required> I confirm I am 18+.</label>

      <button type="submit" class="button"
              style="background:#D4AF37;color:#000;border-radius:999px;padding:.9rem 1.2rem;font-weight:600">
        Reserve
      </button>
    </div>

    {% if form.posted_successfully? %}
      <p style="color:#c9b57a;margin-top:.5rem">Request received — we’ll email your invoice shortly.</p>
    {% elsif form.errors %}
      <p style="color:#ffcdcd">Please check your details and try again.</p>
    {% endif %}
  {% endform %}

  <p style="color:#c9b57a;margin-top:.75rem;font-size:.9rem">
    We’ll email a PayPal invoice. Orders ship discreetly in plain packaging.
  </p>
</div>
