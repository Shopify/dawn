{{ 'section-category-navigation.css' | asset_url | stylesheet_tag }}

<div class="category-navigation color-{{ section.settings.color_scheme }} gradient">
  <div class="category-navigation__wrapper">
    <div class="category-navigation__container">
      {%- for block in section.blocks -%}
        <a
          href="{{ block.settings.link }}"
          class="category-navigation__item"
          {{ block.shopify_attributes }}
        >
          <div class="category-navigation__icon">
            {%- if block.settings.icon != blank -%}
              <img
                src="{{ block.settings.icon | image_url: width: 120 }}"
                alt="{{ block.settings.title }}"
                loading="lazy"
                width="60"
                height="60"
              >
            {%- endif -%}
          </div>
          <span class="category-navigation__label">{{ block.settings.title }}</span>
        </a>
      {%- endfor -%}
    </div>
  </div>
</div>

