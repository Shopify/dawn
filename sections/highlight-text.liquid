{{ 'section-highlight-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  class="highlight-text-block section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
  data-highlight-color="{{ section.settings.highlight_color }}"
  data-default-text-color="{{ section.settings.default_text_color }}"
>
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    <p>{{ section.settings.highlight_text }}</p>
    {% if section.settings.artist_name != blank %}
      <h3>{{ section.settings.artist_name }}</h3>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Highlight Text Block",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Lorem Ipsum"
    },
    {
      "type": "textarea",
      "id": "highlight_text",
      "label": "Highlight Text",
      "default": "Lorem ipsum dolor sit amet consectetur. Nibh vehicula et cursus tortor eu sit sed eu lectus. Eget porta etiam sed arcu etiam. Amet porta faucibus pharetra tincidunt quam dictum porta morbi. Vitae aliquam diam dui habitasse ipsum nisi vulputate tellus lorem. Erat vulputate tortor ac sit est. Blandit volutpat iaculis aliquam enim fringilla sit risus vitae. Proin a in nunc id volutpat vitae ac senectus. Id maecenas turpis nulla amet nisl pharetra et. Non facilisis sit integer dignissim "
    },
    {
      "type": "text",
      "id": "artist_name",
      "label": "Artist Name",
      "default": "Lorem Ipsum"
    },
    {
      "type": "color",
      "id": "default_text_color",
      "label": "Default Text Color",
      "default": "#999999"
    },
    {
      "type": "color",
      "id": "highlight_color",
      "label": "Highlight Color",
      "default": "#272727"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Highlight Text Block",
      "category": "Custom"
    }
  ]
}
{% endschema %}
