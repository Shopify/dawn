{%- liquid
  if request.host == 'perfumerie-sukiya-online-test.myshopify.com'
    assign cpb_connect_url = 'https://development.cledepeau-beaute.com/jp/connect?token_data='
    assign cpb_api_base_url = 'https://dev-cpb-connect.sukiya.biz'
    assign cpb_api_site_serial = 'rLkZfRcSDL5xikrksvuxkcUqvFxrfwSsoI9Q8cWOENJaxttdPy'
  else
    assign cpb_connect_url = 'https://www.cledepeau-beaute.com/jp/connect?token_data='
    assign cpb_api_base_url = 'https://cpb-connect.sukiya.biz'
    assign cpb_api_site_serial = 'fBiPpaK2L6gqaXWIT87xnhc6RuOApD2XykJTl2jiyR4Ql2nlak'
  endif
  assign cpb_items = cart.items | where: 'vendor', 'クレ・ド・ポー ボーテ'
  assign cpb_items_size = cpb_items | size
  assign bsi_items = cart.items | where: 'vendor', 'SHISEIDO'
  assign bsi_items_size = bsi_items | size
-%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- unless settings.cart_type == 'drawer' -%}
  <script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>
{%- endunless -%}

<script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>

<cart-items class="gradient color-{{ section.settings.color_scheme }} isolate{% if cart == empty %} is-empty{% else %} section-{{ section.id }}-padding{% endif %}" cpb-api-base-url="{{ cpb_api_base_url }}" cpb-api-site-serial="{{ cpb_api_site_serial }}">
  <div class="page-width">
    <div class="title-wrapper-with-link">
      <h1 class="title title--primary">{{ 'sections.cart.title' | t }}</h1>
      <a href="{{ routes.root_url }}" class="underlined-link">
        {{- 'general.continue_shopping' | t -}}
      </a>
    </div>

    <div class="cart__warnings">
      <h1 class="cart__empty-text">{{ 'sections.cart.empty' | t }}</h1>
      <a href="{{ routes.root_url }}" class="button">
        {{ 'general.continue_shopping' | t }}
      </a>

      {%- if shop.customer_accounts_enabled and customer == null -%}
        <h2 class="cart__login-title">{{ 'sections.cart.login.title' | t }}</h2>
        <p class="cart__login-paragraph">
          {{ 'sections.cart.login.paragraph_html' | t: link: routes.account_login_url }}
        </p>
      {%- endif -%}
    </div>

    {% if cpb_items_size > 0 %}
      {% if customer %}
        <div class="cpb-connect-notification cpb-connect-status tw-hidden">
          <p class="cpb-connect-notification__title">クレ・ド・ポー ボーテ<br/>
            メンバーシッププログラム会員との<br/>
            ID連携は完了しています。</p>
        </div>
        <div class="cpb-connect-notification cpb-connect-status-not-connected tw-hidden">
          <p class="cpb-connect-notification__title">クレ・ド・ポー ボーテ<br/>
            メンバーシッププログラム会員との<br/>
            ID連携は行われておりません。</p>
          <p class="text-center">クレ・ド・ポー ボーテの会員ポイントが<br/>
            Perfumerie Sukiya Online Storeでの購入で付与されますので、<br class="pc-only"/>
            ぜひご登録ください。</p>
          <a href="/pages/cpb-connect" class="cpb-connect-button">登録する</a>
          <p class="cpb-connect-small">※ Perfumerie Sukiya Online Store会員登録およびクレ・ド・ポー ボーテ
            メンバーシッププログラムのどちらも会員登録が必要となります。</p>
