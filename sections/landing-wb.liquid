{{ 'blend-it.css' | asset_url | stylesheet_tag }}
{{ 'fonts-wb.css' | asset_url | stylesheet_tag }}

<section class="standard ">
  <article class="upwards">
    <p class="intro">
      {{ section.settings.intro_text }}
    </p>
    <div class="home-image1">
      <img
        height="auto"
        width="auto"
        src="{{ section.settings.home_image | image_url: width:500, height: 720 }}"
        alt=" {{section.settings.home_image.alt }}"
      >
    </div>
    <p class="help">
      {{ section.settings.help_text }}
    </p>
    <div class="home-image2">
      <img
        height="auto"
        width="auto"
        src="{{ section.settings.home_image2 | image_url: width: 300, height: 112 }}"
        alt="{{ section.settings.home_image2.alt }}"
      >
    </div>
  </article>
</section>
<div class="bg-grey">
  <section class="banding">
    <article class="max">
      <p>
        {{ section.settings.keythings_text }}
      </p>
      <div class="home-image3">
        <img
          height="auto"
          width="auto"
          src="{{ section.settings.home_image3 | image_url: width: 450, height: 438 }}"
          alt="{{ section.settings.home_image3.alt }}"
        >
      </div>
    </article>
  </section>
</div>
<section class="standard">
  <article class="hang-right">
    <a name="guide"></a>
    <h3 class="section-title-wb">{{ section.settings.guide_title }}</h3>
    <p>
      {{ section.settings.guide_text }}
    </p>
    <div class="step">
      <span class="step1">Step 1</span>
      <h4>{{ section.settings.step1_title }}</h4>
      <p>
        {{ section.settings.step1_text }}
      </p>
    </div>
    <div class="step">
      <span class="step2">Step 2</span>
      <h4>{{ section.settings.step2_title }}</h4>
      <p>
        {{ section.settings.step2_text }}
      </p>
    </div>
    <div class="step">
      <span class="step3">Step 3</span>
      <h4>{{ section.settings.step3_title }}</h4>
      <p>
        {{ section.settings.step3_text }}
      </p>
    </div>
    <div class="home-image4">
      <img
        height="auto"
        width="auto"
        src="{{ section.settings.home_image4 | image_url: width: 356, height: 866 }}"
        alt=" {{ section.settings.home_image4.alt }}"
      >
    </div>
  </article>
  <article>
    <a class="get-started-link" href="{{ section.settings.start_link }}">
      <button class="pulse" >{{ section.settings.start_button_label }}</button>
    </a>
  </article>
</section>
