{%- for link in section.settings.menu.links -%}
  <a href="{{ link.url }}" style="background:{{ section.settings.bg }};color:{{ section.settings.color }};min-width:{{ section.settings.width }}px;border-radius:{{ section.settings.radius }}px;padding:{{ section.settings.pady }}px {{ section.settings.padx }}px">
    {{ link.title }}
  </a>
{%- endfor -%}
{% schema %}
{
  "name": "Buttons",
  "tag": "section",
  "class": "spaced-section btns",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu to list its links as buttons"
    },
	{
      "type": "color",
      "id": "bg",
      "label": "Buttons background",
	  "default": "#8a9e93"
    },
	{
      "type": "color",
      "id": "color",
      "label": "Buttons color",
	  "default": "#fff"
    },
    {
      "type": "range",
      "id": "width",
      "min": 150,
      "max": 250,
      "step": 1,
      "default": 165,
      "unit": "px",
      "label": "Minimum button width"
    },
    {
      "type": "range",
      "id": "padx",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 10,
      "unit": "px",
      "label": "Buttons horizontal padding"
    },
    {
      "type": "range",
      "id": "pady",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0,
      "unit": "px",
      "label": "Buttons vertical padding"
    },
    {
      "type": "range",
      "id": "radius",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 15,
      "unit": "px",
      "label": "Buttons radius"
    }
  ],
  "presets": [{"name": "Buttons"}]
}
{% endschema %}
