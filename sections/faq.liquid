{% comment %}theme-check-disable TemplateLength{% endcomment %}
{{ 'section-main-product.css' | asset_url | stylesheet_tag }}
{{ 'component-accordion.css' | asset_url | stylesheet_tag }}
{{ 'component-rte.css' | asset_url | stylesheet_tag }}

<section class="SectionGrid color-{{ section.settings.color_scheme }} faq-mx-auto faq-my-25px">
  <div class="SectionGrid-Narrow">
    <header class="ff-heading fs-7 fs-lg-9 lh-116 fw-400 ls-m148 mt-13 mb-7 mb-md-8">
      {{ section.settings.heading | escape }}
    </header>
    <div>
      <div id="ProductInfo-{{ section.id }}" class="product__info-container{% if section.settings.enable_sticky_info %} product__info-container--sticky{% endif %}">
        {%- for block in section.blocks -%}
            <div class="accordion" {{ block.shopify_attributes }}>
              <details>
                <summary>
                  <div class="summary__title">
                    <h2 class="h4 accordion__title ff-heading fw-500 fs-2 fs-lg-3 lh-145 pt-6">
                      {{ block.settings.question }}
                    </h2>
                  </div>
                  {% render 'icon-caret' %}
                </summary>
                <div class="accordion__content rte ff-body fw-300 my-0 fs-1 lh-150 ls-p024 hyphen pr-9 pr-md-15 pb-6" lang="de">
                  {{ block.settings.answer }}
                </div>
              </details>
              <div class="h-0 bdtw-05px bdtc-e5 bdts-sol mx-6">&nbsp;</div>
            </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FAQ",
  "tag": "section",
  "class": "spaced-section",
  "blocks": [
    {
      "type": "text",
      "name": "question",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Frage"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Antwort"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Ãœberschrift des Abschnitts"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Farbschema",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.footer.settings.color_scheme.options__1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.footer.settings.color_scheme.options__2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.footer.settings.color_scheme.options__3.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.footer.settings.color_scheme.options__4.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.footer.settings.color_scheme.options__5.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.footer.settings.color_scheme.label"
    }
  ],
  "presets": [
    {
      "name": "FAQ",
      "settings": {
        "color_scheme": "background-1"
      }
    }
  ]
}
{% endschema %}
