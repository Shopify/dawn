{{ 'section-product-category-hero.css' | asset_url | stylesheet_tag }}

<div class="product-category-hero color-{{ section.settings.color_scheme }}">
  <div class="product-category-hero__main" id="product-category-hero-main">
    <div class="product-category-hero__nav">
      <div class="product-category-hero__nav-container">
        <ul class="product-category-hero__nav-list">
          {% for nav_collection in collections %}
            {% unless nav_collection.handle == 'frontpage' %}
              <li class="product-category-hero__nav-item">
                <a
                  href="{{ nav_collection.url }}"
                  class="product-category-hero__nav-button{% if collection and nav_collection.handle == collection.handle %} active{% endif %}"
                >
                  <h3 class="product-category-hero__nav-count">({{ nav_collection.products_count }})</h3>
                  <h4 class="product-category-hero__nav-text">{{ nav_collection.title }}</h4>
                </a>
              </li>
            {% endunless %}
          {% endfor %}
        </ul>
      </div>
    </div>
    <div class="product-category-hero__image-container">
      <img
        {% if collection and collection.featured_image != blank %}
          src="{{ collection.featured_image | image_url: width: 1920 }}"
          alt="{{ collection.title | escape }}"
        {% elsif collection and collection.products.first.featured_image != blank %}
          src="{{ collection.products.first.featured_image | image_url: width: 1920 }}"
          alt="{{ collection.title | escape }}"
        {% else %}
          src="{{ 'no-image.webp' | asset_url }}"
          alt="Collection"
        {% endif %}
        class="product-category-hero__image"
        loading="eager"
        width="1920"
        height="1080"
      >
    </div>
  </div>

  <div class="product-category-hero__content">
    <div class="product-category-hero__content-inner">
      <h1 class="product-category-hero__title">{{ collection.title }}</h1>
      <p class="product-category-hero__description">
        {% if collection.description != blank %}
          {{ collection.description }}
        {% else %}
          Explore our {{ collection.title }} collection
        {% endif %}
      </p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Category Hero",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    }
  ],
  "presets": [
    {
      "name": "Product Category Hero",
      "category": "Custom"
    }
  ]
}
{% endschema %}
