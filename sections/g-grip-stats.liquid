{% schema %}
{
  "name": "G-Grip Stats Grid",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Main Phone Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Train Like You Play â€“ Perform When It Counts."
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub-heading",
      "default": "Immediate Insights at Your Fingertips"
    }
  ],
  "blocks": [
    {
      "type": "stat_block",
      "name": "Stat Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Text Label",
          "default": "Stat Label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "G-Grip Stats Grid",
      "blocks": [
        {
          "type": "stat_block",
          "settings": { "label": "Swing Speed" }
        },
        {
          "type": "stat_block",
          "settings": { "label": "Tempo" }
        },
        {
          "type": "stat_block",
          "settings": { "label": "Face Angle" }
        },
        {
          "type": "stat_block",
          "settings": { "label": "Path" }
        },
        {
          "type": "stat_block",
          "settings": { "label": "Impact" }
        },
        {
          "type": "stat_block",
          "settings": { "label": "Consistency" }
        }
      ]
    }
  ]
}
{% endschema %}

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: 60px;
    padding-bottom: 60px;
    background-color: #000000;
  }

  .g-stats-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Grid Layout Fix - Default to Grid on Desktop */
  .g-stats-layout {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  @media screen and (min-width: 750px) {
    .g-stats-layout {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 60px;
      align-items: center;
    }
  }

  .g-stats-left {
    width: 100%;
    /* Ensure height if image is missing */
    min-height: 400px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  /* Placeholder for empty image */
  .g-stats-placeholder {
    width: 100%;
    height: 100%;
    min-height: 400px;
    background-color: #1a1a1a;
    border-radius: 12px;
    border: 1px solid #333;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #666;
  }

  .g-stats-right {
    width: 100%;
    text-align: left; /* Explicit text alignment */
  }

  .g-stats-phone-image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 12px;
  }

  .g-stats-subheading {
    color: #ff7700; /* Brand Orange */
    background-color: rgba(255, 119, 0, 0.2); /* Slight highlight background based on image style */
    display: inline-block;
    padding: 5px 10px;
    font-size: 1.4rem;
    text-transform: capitalize; /* Matches "Immediate Insights..." in image */
    font-weight: 600;
    margin-bottom: 30px; /* Space before grid */
    letter-spacing: 0;
    border-radius: 4px;
  }

  .g-stats-heading {
    color: #FFFFFF;
    font-size: 3.2rem;
    font-weight: bold;
    margin-top: 0;
    margin-bottom: 20px; /* Space before subheading */
    line-height: 1.2;
  }

  /* The Stat Boxes Grid */
  .g-stats-grid {
    display: grid;
    grid-template-columns: 1fr 1fr; /* 2 columns mobile */
    gap: 12px;
    width: 100%;
  }

  @media screen and (min-width: 750px) {
    .g-stats-grid {
       grid-template-columns: 1fr 1fr 1fr; /* 3 columns on desktop based on image */
       gap: 20px;
    }
  }

  .g-stat-item {
    background-color: #111111; /* Darker background from image */
    border-radius: 12px; /* Matches Global Style */
    padding: 20px;
    height: auto;
    aspect-ratio: 1 / 1; /* Square cards */
    display: flex;
    flex-direction: column; /* Icon Top, Text Bottom */
    align-items: center;
    justify-content: center;
    border: 1px solid #222;
    width: 100%;
  }

  .g-stat-icon {
    width: 40px; /* Larger icon */
    height: 40px;
    object-fit: contain;
    margin-bottom: 15px; /* Spacing below icon */
    margin-right: 0;
  }

  .g-stat-icon-placeholder {
    width: 40px;
    height: 40px;
    background-color: #333;
    border-radius: 50%;
    margin-bottom: 15px;
    margin-right: 0;
  }

  .g-stat-text {
    color: #FFFFFF;
    font-size: 1.6rem; /* 16px */
    font-weight: 500;
  }

{% endstyle %}

<div class="section-{{ section.id }}-padding">
  <div class="g-stats-container">
    <div class="g-stats-layout">
      <div class="g-stats-left">
        {% if section.settings.image != blank %}
          {{ section.settings.image | image_url: width: 600 | image_tag:
            loading: 'lazy',
            class: 'g-stats-phone-image',
            sizes: '(min-width: 750px) 40vw, 100vw'
          }}
        {% else %}
          <div class="g-stats-placeholder">
             {{ 'product-1' | placeholder_svg_tag: 'g-stats-phone-image' }}
          </div>
        {% endif %}
      </div>
      <div class="g-stats-right">
        {% if section.settings.heading != blank %}
          <h2 class="g-stats-heading">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <div class="g-stats-subheading">{{ section.settings.subheading }}</div>
        {% endif %}

        <div class="g-stats-grid">
          {% for block in section.blocks %}
            <div class="g-stat-item" {{ block.shopify_attributes }}>
              {% if block.settings.icon != blank %}
                {{ block.settings.icon | image_url: width: 48 | image_tag:
                  loading: 'lazy',
                  class: 'g-stat-icon'
                }}
              {% else %}
                <div class="g-stat-icon-placeholder"></div>
              {% endif %}
              {% if block.settings.label != blank %}
                <span class="g-stat-text">{{ block.settings.label }}</span>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
