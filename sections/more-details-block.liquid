{{ 'section-more-details-block.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="more-details-block section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
  <div class="page-width">
    <div class="more-details-block-inner">
      {%- if section.settings.heading != blank -%}
        <h2 class="more-details-block-heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      <div class="more-details-block-content">
        {%- if section.settings.paragraph_1 != blank -%}
          <p class="more-details-block-paragraph">{{ section.settings.paragraph_1 }}</p>
        {%- endif -%}

        {%- if section.settings.paragraph_2 != blank -%}
          <p class="more-details-block-paragraph">{{ section.settings.paragraph_2 }}</p>
        {%- endif -%}
      </div>
      {%- if section.settings.show_arrow -%}
        <button
          class="more-details-block-arrow"
          onclick="scrollToNextSection(this)"
          aria-label="Scroll to next section"
        >
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M8 1V15M8 15L14 9M8 15L2 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "More Details Block",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "IN MORE DETAIL"
    },
    {
      "type": "textarea",
      "id": "paragraph_1",
      "label": "First Paragraph",
      "default": "Lorem ipsum dolor sit amet consectetur. Risus eu dignissim purus et amet fermentum sed egestas. At fringilla placerat vestibulum ornare imperdiet aliquet. Volutpat morbi semper gravida ut."
    },
    {
      "type": "textarea",
      "id": "paragraph_2",
      "label": "Second Paragraph",
      "default": "Aliquam justo euismod risus ut orci vitae mi. Aliquet tristique adipiscing pretium diam lectus habitant aenean."
    },
    {
      "type": "checkbox",
      "id": "show_arrow",
      "label": "Show arrow",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "More Details Block",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<script>
  function scrollToNextSection(button) {
    const currentSection = button.closest('.more-details-block').parentElement;
    let nextSection = currentSection.nextElementSibling;

    while (nextSection && !nextSection.classList.contains('shopify-section')) {
      nextSection = nextSection.nextElementSibling;
    }

    if (nextSection) {
      nextSection.scrollIntoView({
        behavior: 'smooth',
        block: 'start',
      });
    } else {
      const footer = document.querySelector('footer') || document.querySelector('.footer');
      if (footer) {
        footer.scrollIntoView({
          behavior: 'smooth',
          block: 'start',
        });
      } else {
        window.scrollTo({
          top: document.body.scrollHeight,
          behavior: 'smooth',
        });
      }
    }
  }
</script>
