{% schema %}
{
  "name": "G-Grip Product Stage",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The World's First Intelligent Golf Club."
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub-heading",
      "default": "Master Your Swing, Own Your Game"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>A complete reinvention of the golf club, combining advanced sensor technology, wireless charging and AI directly into the club for real-time data insights and precision performance improvement.<br>Recognized by the 2025 CES Innovation Awards in both Fitness and Sports categories, G-grip is the next-generation golf club for amateurs and prosâ€”engineered for the course, built to elevate your game.</p>"
    },
    {
      "type": "image_picker",
      "id": "image_watch",
      "label": "Watch Image (Left)"
    },
    {
      "type": "image_picker",
      "id": "image_grip",
      "label": "Grip Image (Center)"
    },
    {
      "type": "image_picker",
      "id": "image_phone",
      "label": "Phone Image (Right)"
    }
  ],
  "presets": [
    {
      "name": "G-Grip Product Stage"
    }
  ]
}
{% endschema %}

{% style %}
  .section-{{ section.id }}-wrapper {
    background-color: #000000;
    padding: 100px 0 0 0; /* Top padding, bottom handled by content/glow */
    position: relative;
    overflow: hidden;
    min-height: 800px; /* Ensure tall canvas */
  }

  /* The Glow Effect - Enhanced */
  .section-{{ section.id }}-wrapper::before {
    content: "";
    position: absolute;
    bottom: -200px;
    left: 50%;
    transform: translateX(-50%);
    width: 120%;
    height: 600px;
    background: radial-gradient(circle, rgba(255, 87, 51, 0.3) 0%, rgba(255, 87, 51, 0.1) 40%, rgba(0,0,0,0) 70%);
    z-index: 0;
    pointer-events: none;
  }

  .g-stage-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .g-stage-header {
    margin-bottom: 40px;
    max-width: 900px;
  }

  .g-stage-heading {
    color: #FFFFFF;
    font-size: 5.6rem;
    font-weight: 700;
    margin-top: 0;
    margin-bottom: 20px;
    line-height: 1.1;
    letter-spacing: -1px;
  }

  .g-stage-subheading {
    color: #FFFFFF;
    font-size: 2.4rem;
    font-weight: 400;
    margin-bottom: 25px;
    display: block;
  }

  .g-stage-description {
    color: #CCCCCC;
    font-size: 1.4rem;
    line-height: 1.6;
    max-width: 700px;
    margin: 0 auto;
  }

  .g-stage-description p {
      margin-bottom: 1em;
  }

  /* The Stage Scene */
  .g-stage-scene {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    width: 100%;
    margin-top: 20px;
  }

  .stage-item-watch,
  .stage-item-grip,
  .stage-item-phone {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .stage-item-watch img,
  .stage-item-grip img,
  .stage-item-phone img {
    display: block;
    height: auto;
    width: auto;
    max-width: 100%;
    /* No border radius on these product shots as they should be cutouts */
  }

  /* Desktop Layout Logic */
  @media screen and (min-width: 990px) {
    .g-stage-scene {
      height: 600px; /* Fixed height for the scene to compose elements */
      align-items: center; /* Vertically center */
    }

    .stage-item-grip {
      z-index: 10;
      width: auto;
      height: 100%;
    }

    .stage-item-grip img {
        height: 100%; /* Make grip full height of the scene */
        max-height: 600px;
    }

    .stage-item-watch {
      z-index: 5;
      margin-right: -40px; /* Pull closer to grip */
      transform: translateY(20px) rotate(-10deg); /* Subtle floating effect if needed, or just position */
      transform: translateY(0); /* Reset transform, trust the image */
      width: 250px;
    }

    .stage-item-phone {
      z-index: 5;
      margin-left: -40px; /* Pull closer to grip */
      width: 280px;
    }

    /* Adjust specific sizes based on common product shot ratios */
    .stage-item-watch img {
        max-width: 100%;
    }

    .stage-item-phone img {
        max-width: 100%;
    }
  }

  /* Intermediate Step */
   @media screen and (min-width: 750px) and (max-width: 989px) {
      .g-stage-scene {
         gap: 20px;
      }
      .stage-item-grip { width: 40%; }
      .stage-item-watch { width: 25%; }
      .stage-item-phone { width: 25%; }
   }

  /* Mobile Layout */
  @media screen and (max-width: 749px) {
    .section-{{ section.id }}-wrapper {
        padding-top: 60px;
    }

    .g-stage-heading {
        font-size: 3.2rem;
    }

    .g-stage-subheading {
        font-size: 1.8rem;
    }

    .g-stage-scene {
      flex-direction: column;
      gap: 40px;
      margin-top: 40px;
    }

    /* Stack order: Watch Top, Grip Middle, Phone Bottom */
    .stage-item-watch {
      order: 1;
      width: 50%;
    }
    .stage-item-grip {
      order: 2;
      width: 60%;
    }
    .stage-item-phone {
      order: 3;
      width: 50%;
    }
  }

{% endstyle %}

<div class="section-{{ section.id }}-wrapper">
  <div class="g-stage-container">
    <div class="g-stage-header">
      {% if section.settings.heading != blank %}
        <h2 class="g-stage-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <span class="g-stage-subheading">{{ section.settings.subheading }}</span>
      {% endif %}
      {% if section.settings.description != blank %}
        <div class="g-stage-description">{{ section.settings.description }}</div>
      {% endif %}
    </div>

    <div class="g-stage-scene">
      <div class="stage-item-watch">
        {% if section.settings.image_watch != blank %}
          {{ section.settings.image_watch | image_url: width: 500 | image_tag:
            loading: 'lazy',
            sizes: '(min-width: 990px) 250px, 50vw'
          }}
        {% else %}
          {{ 'product-1' | placeholder_svg_tag }}
        {% endif %}
      </div>

      <div class="stage-item-grip">
        {% if section.settings.image_grip != blank %}
          {{ section.settings.image_grip | image_url: width: 800 | image_tag:
            loading: 'lazy',
            sizes: '(min-width: 990px) 400px, 80vw'
          }}
        {% else %}
          {{ 'product-2' | placeholder_svg_tag }}
        {% endif %}
      </div>

      <div class="stage-item-phone">
        {% if section.settings.image_phone != blank %}
          {{ section.settings.image_phone | image_url: width: 500 | image_tag:
            loading: 'lazy',
            sizes: '(min-width: 990px) 280px, 50vw'
          }}
        {% else %}
          {{ 'product-3' | placeholder_svg_tag }}
        {% endif %}
      </div>
    </div>
  </div>
</div>
