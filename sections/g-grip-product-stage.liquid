{% schema %}
{
  "name": "G-Grip Product Stage",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The World's First Intelligent Golf Club."
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub-heading",
      "default": "Master Your Swing, Own Your Game"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>A complete reinvention of the golf club, combining advanced sensor technology, wireless charging and AI directly into the club for real-time data insights and precision performance improvement.<br>Recognized by the 2025 CES Innovation Awards in both Fitness and Sports categories, G-grip is the next-generation golf club for amateurs and prosâ€”engineered for the course, built to elevate your game.</p>"
    },
    {
      "type": "image_picker",
      "id": "image_watch",
      "label": "Watch Image (Left)"
    },
    {
      "type": "image_picker",
      "id": "image_grip",
      "label": "Grip Image (Center)"
    },
    {
      "type": "image_picker",
      "id": "image_phone",
      "label": "Phone Image (Right)"
    }
  ],
  "presets": [
    {
      "name": "G-Grip Product Stage"
    }
  ]
}
{% endschema %}

{% style %}
  .section-{{ section.id }}-wrapper {
    background-color: #000000;
    padding: 100px 0 0 0;
    position: relative;
    overflow: hidden;
    min-height: 800px;
  }

  /* The Glow Effect - Specific Request */
  .section-{{ section.id }}-wrapper::before {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%; /* Cover the area but the gradient is at bottom */
    background: radial-gradient(ellipse at bottom center, rgba(255, 119, 0, 0.5) 0%, rgba(0,0,0,0) 60%);
    z-index: 0;
    pointer-events: none;
  }

  .g-stage-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .g-stage-header {
    margin-bottom: 40px;
    max-width: 900px;
  }

  .g-stage-heading {
    color: #FFFFFF;
    font-size: 5.6rem;
    font-weight: 700;
    margin-top: 0;
    margin-bottom: 20px;
    line-height: 1.1;
    letter-spacing: -1px;
  }

  .g-stage-subheading {
    color: #FFFFFF;
    font-size: 2.4rem;
    font-weight: 400;
    margin-bottom: 25px;
    display: block;
  }

  .g-stage-description {
    color: #CCCCCC;
    font-size: 1.4rem;
    line-height: 1.6;
    max-width: 700px;
    margin: 0 auto;
  }

  .g-stage-description p {
      margin-bottom: 1em;
  }

  /* The Stage Scene - Requested Flex Layout */
  .g-stage-scene {
    display: flex;
    justify-content: center;
    align-items: flex-end; /* Requested Alignment */
    position: relative;
    width: 100%;
    margin-top: 20px;
    /* Height isn't explicitly requested on container, but grip is 500px, so this will grow */
  }

  .stage-item-watch,
  .stage-item-grip,
  .stage-item-phone {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .stage-item-watch img,
  .stage-item-grip img,
  .stage-item-phone img {
    display: block;
    height: auto;
    width: auto;
    max-width: none; /* Allow specific sizing */
  }

  /* Desktop Styles */
  @media screen and (min-width: 750px) {
      /* Center Grip Anchor */
      .stage-item-grip {
        position: relative;
        z-index: 10; /* Explicitly set high z-index */
        height: 500px; /* Requested Height */
      }
      .stage-item-grip img {
          height: 100%;
          width: auto;
      }

      /* Watch (Left) */
      .stage-item-watch {
          position: relative;
          z-index: 1; /* Tucked behind */
          margin-right: -40px; /* Tighter Overlap */
          transform: translateY(-50px) rotate(-10deg);
      }
      .stage-item-watch img {
          /* Scale watch appropriately relative to grip if needed, or rely on natural size.
             Assuming natural size is okay or restricted by max-width elsewhere, but here we want flex to handle it.
             Let's set a reasonable max-height relative to grip if images are huge. */
          max-height: 300px;
      }

      /* Phone (Right) */
      .stage-item-phone {
          position: relative;
          z-index: 1; /* Tucked behind */
          margin-left: -40px; /* Tighter Overlap */
          transform: translateY(-20px) rotate(5deg);
      }
      .stage-item-phone img {
           max-height: 400px;
      }
  }

  /* Mobile Layout - Scale down but keep arrangement */
  @media screen and (max-width: 749px) {
    .section-{{ section.id }}-wrapper {
        padding-top: 60px;
        min-height: 600px;
    }

    .g-stage-heading {
        font-size: 3.2rem;
    }

    .g-stage-subheading {
        font-size: 1.8rem;
    }

    .g-stage-scene {
      /* Keep flex row */
      flex-direction: row;
      align-items: flex-end;
      transform: scale(0.5); /* Scale items down by 50% */
      transform-origin: top center;
      margin-top: -50px; /* Compensate for whitespace caused by scale if needed, or just let it sit */
      width: 200%; /* Compensate width for scale 0.5 to center properly? No, transform scale affects visual size. */
      /* A better way to scale down 50% without side effects of transform on layout flow might be zooming or setting heights. */
      /* Let's use smaller dimensions explicitly to match "Scale the images down by 50%" */
      transform: none;
    }

    .stage-item-grip {
        z-index: 10;
        height: 250px; /* 50% of 500px */
    }
    .stage-item-grip img {
        height: 100%;
    }

    .stage-item-watch {
        position: relative;
        z-index: 5;
        margin-right: -25px; /* 50% of -50px */
        transform: translateY(-25px) rotate(-10deg); /* Scaled transform */
    }
    .stage-item-watch img {
        max-height: 150px; /* 50% of 300px */
    }

    .stage-item-phone {
        position: relative;
        z-index: 5;
        margin-left: -25px; /* 50% of -50px */
        transform: translateY(-10px) rotate(5deg); /* Scaled transform */
    }
    .stage-item-phone img {
        max-height: 200px; /* 50% of 400px */
    }
  }

{% endstyle %}

<div class="section-{{ section.id }}-wrapper">
  <div class="g-stage-container">
    <div class="g-stage-header">
      {% if section.settings.heading != blank %}
        <h2 class="g-stage-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <span class="g-stage-subheading">{{ section.settings.subheading }}</span>
      {% endif %}
      {% if section.settings.description != blank %}
        <div class="g-stage-description">{{ section.settings.description }}</div>
      {% endif %}
    </div>

    <div class="g-stage-scene">
      <div class="stage-item-watch">
        {% if section.settings.image_watch != blank %}
          {{ section.settings.image_watch | image_url: width: 500 | image_tag:
            loading: 'lazy'
          }}
        {% else %}
          {{ 'product-1' | placeholder_svg_tag }}
        {% endif %}
      </div>

      <div class="stage-item-grip">
        {% if section.settings.image_grip != blank %}
          {{ section.settings.image_grip | image_url: width: 800 | image_tag:
            loading: 'lazy'
          }}
        {% else %}
          {{ 'product-2' | placeholder_svg_tag }}
        {% endif %}
      </div>

      <div class="stage-item-phone">
        {% if section.settings.image_phone != blank %}
          {{ section.settings.image_phone | image_url: width: 500 | image_tag:
            loading: 'lazy'
          }}
        {% else %}
          {{ 'product-3' | placeholder_svg_tag }}
        {% endif %}
      </div>
    </div>
  </div>
</div>
