{% schema %}
{
  "name": "G-Grip Benefits",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Choose G-GRIP?"
    }
  ],
  "blocks": [
    {
      "type": "benefit_card",
      "name": "Benefit Card",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Invisible Technology"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Description of the benefit goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "G-Grip Benefits",
      "blocks": [
        {
          "type": "benefit_card"
        },
        {
          "type": "benefit_card"
        },
        {
          "type": "benefit_card"
        }
      ]
    }
  ]
}
{% endschema %}

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: 60px;
    padding-bottom: 60px;
    background-color: #000000;
  }

  .g-benefits-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .g-benefits-heading {
    color: #FFFFFF;
    font-size: 3.6rem;
    font-weight: bold;
    text-align: center;
    margin-bottom: 40px;
    margin-top: 0;
  }

  .g-benefits-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
  }

  @media screen and (min-width: 750px) {
    .g-benefits-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .g-benefit-card {
    background-color: #1a1a1a;
    padding: 40px;
    border-radius: 12px;
    text-align: center;
    border: 1px solid #333; /* Added based on global constraints for separation, though not explicitly asked for this specific section, it matches the aesthetic */
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .g-benefit-title {
    color: #ff7700;
    font-size: 2.0rem;
    font-weight: bold;
    margin-bottom: 15px;
    margin-top: 0;
  }

  .g-benefit-description {
    color: #FFFFFF; /* Specific request override global grey */
    font-size: 1.6rem;
    line-height: 1.5;
    margin: 0;
  }
{% endstyle %}

<div class="section-{{ section.id }}-padding">
  <div class="g-benefits-container">
    {% if section.settings.heading != blank %}
      <h2 class="g-benefits-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="g-benefits-grid">
      {% for block in section.blocks %}
        <div class="g-benefit-card" {{ block.shopify_attributes }}>
          {% if block.settings.title != blank %}
            <h3 class="g-benefit-title">{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.description != blank %}
            <p class="g-benefit-description">{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
