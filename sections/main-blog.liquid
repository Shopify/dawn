{% javascript %}
class TagBasedProductRecommendations extends HTMLElement {
  constructor() {
    super();
    this.container = this.querySelector('#tag-product-recommendations-container');
    this.tagName = this.dataset.tagName;
    this.sectionId = this.dataset.sectionId;
    this.init();
  }

  async init() {
    if (!this.container || !this.tagName) return;
    console.log('Tag-based recommendations init() - Current tag:', this.tagName);
    
    try {
      // Find matching metaobject for the current tag
      console.log('Fetching metaobjects from Shopify API');
      const response = await fetch(`/api/2023-10/graphql.json`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-Shopify-Storefront-Access-Token': '{{ shop.storefront_access_token }}'
        },
        body: JSON.stringify({
          query: `
            query getMetaobjectByTag {
              metaobjects(type: "recipe_tag_group", first: 10) {
                edges {
                  node {
                    id
                    fields {
                      key
                      value
                    }
                  }
                }
              }
            }
          `
        })
      });
      
      console.log('Metaobjects API response status:', response.status);

      if (!response.ok) {
        throw new Error('Network response was not ok');
      }

      const data = await response.json();
      console.log('Metaobjects API response data:', data);
      const metaobjects = data.data?.metaobjects?.edges || [];
      console.log('Metaobjects found:', metaobjects.length);
      let productIds = [];

      // Find the metaobject with the current tag and get its product IDs
      for (const edge of metaobjects) {
        const metaobject = edge.node;
        const tagField = metaobject.fields.find(field => field.key === 'tag');
        const productField = metaobject.fields.find(field => field.key === 'product');
        console.log('Checking metaobject fields - Tag value:', tagField?.value, 'Current tag:', this.tagName);

        if (tagField && tagField.value === this.tagName && productField) {
          // Parse the product field value (it's a JSON string of product GIDs)
          console.log('Found matching tag metaobject. Product field value:', productField.value);
          try {
            productIds = JSON.parse(productField.value);
            console.log('Parsed product IDs:', productIds);
          } catch (e) {
            console.error('Error parsing product IDs:', e);
          }
          break;
        }
      }

      if (productIds.length === 0) {
        console.log('No product IDs found for tag:', this.tagName);
        this.container.innerHTML = '<div class="grid__item"><p>No product recommendations found.</p></div>';
        return;
      }
      console.log('Product IDs found:', productIds);

      // Fetch product details for each product ID
      const productIdsString = productIds.map(id => `"${id}"`).join(',');
      console.log('Sending product query with IDs:', productIdsString);
      const productsResponse = await fetch(`/api/2023-10/graphql.json`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-Shopify-Storefront-Access-Token': '{{ shop.storefront_access_token }}'
        },
        body: JSON.stringify({
          query: `
            query getProductsByIds {
              nodes(ids: [${productIdsString}]) {
                ... on Product {
                  id
                  title
                  handle
                  featuredImage {
                    url(transform: { maxWidth: 500, maxHeight: 500, crop: CENTER })
                    altText
                  }
                  priceRange {
                    minVariantPrice {
                      amount
                      currencyCode
                    }
                  }
                  vendor
                }
              }
            }
          `
        })
      });

      if (!productsResponse.ok) {
        throw new Error('Network response was not ok');
      }

      const productsData = await productsResponse.json();
      console.log('Products API response data:', productsData);
      const products = productsData.data?.nodes?.filter(node => node) || []; // Filter out any null values
      console.log('Valid products found:', products.length);

      if (products.length === 0) {
        this.container.innerHTML = '<div class="grid__item"><p>No product recommendations found.</p></div>';
        return;
      }

      this.renderProducts(products);
    } catch (error) {
      console.error('Error fetching product recommendations:', error);
      this.container.innerHTML = '<div class="grid__item"><p>Error loading product recommendations.</p></div>';
    }
  }

  renderProducts(products) {
    const productCards = products.map(product => {
      const price = new Intl.NumberFormat('en-US', {
        style: 'currency',
        currency: product.priceRange.minVariantPrice.currencyCode || 'USD'
      }).format(product.priceRange.minVariantPrice.amount);

      return `
        <li class="grid__item">
          <div class="card-wrapper">
            <a href="/products/${product.handle}" class="full-unstyled-link">
              <div class="card card--product">
                <div class="card__inner">
                  <div class="card__media">
                    <div class="media media--transparent media--square">
                      <img
                        src="${product.featuredImage?.url || '//cdn.shopify.com/s/files/1/0533/2089/files/placeholder-image.png?v=1745074293'}"
                        alt="${product.featuredImage?.altText || product.title}"
                        class="motion-reduce"
                        loading="lazy"
                        width="500"
                        height="500"
                      >
                    </div>
                  </div>
                  <div class="card__content">
                    <div class="card__information">
                      <h3 class="card__heading">
                        <span class="full-unstyled-link">${product.title}</span>
                      </h3>
                      ${product.vendor ? `<div class="card-information__text caption-with-letter-spacing">${product.vendor}</div>` : ''}
                      <div class="price">
                        <div class="price__regular">
                          <span class="price-item price-item--regular">
                            ${price}
                          </span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </li>
      `;
    }).join('');

    this.container.innerHTML = `<ul class="grid product-grid grid--4-col-desktop grid--2-col-tablet-down">${productCards}</ul>`;
  }
}

