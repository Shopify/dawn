{% if current_tags != blank and current_tags.size > 0 %}
  {% assign current_tag = current_tags[0] %}
  {% assign matching_metaobject = nil %}
  {% assign recipe_tag_group = shop.metaobjects.recipe_tag_group.values %}
  {% assign product_references = nil %}
  
  {% comment %} Find matching metaobject for the current tag {% endcomment %}
  {% for tag_obj in recipe_tag_group %}
    {% if tag_obj.tag == current_tag %}
      {% assign matching_metaobject = tag_obj %}
      {% if tag_obj.product != blank %}
        {% assign product_references = tag_obj.product %}
      {% endif %}
      {% break %}
    {% endif %}
  {% endfor %}
  
  {% if matching_metaobject != nil and product_references != blank %}
    <div class="color-{{ section.settings.color_scheme | default: 'background-1' }} gradient">
      <div class="product-recommendations page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        
        <h2 class="related-products__heading inline-richtext h1">
          Recommended Products for {{ current_tag }}
        </h2>
        
        <ul class="grid product-grid grid--4-col-desktop grid--2-col-tablet-down" role="list">
          {% comment %} Debug info {% endcomment %}
          <script>
            console.log('Current tag:', '{{ current_tag }}');
            console.log('Product references:', {{ product_references | json }});
          </script>
          
          {% assign product_ids = product_references | split: ',' %}
          {% for product_id in product_ids %}
            {% assign product_id = product_id | strip %}
            {% if product_id != blank %}
              {% assign product = all_products[product_id] %}
              {% if product != blank %}
                <li class="grid__item">
                  {% render 'card-product', 
                    card_product: product,
                    media_aspect_ratio: section.settings.image_ratio | default: 'square',
                    image_shape: section.settings.image_shape | default: 'default',
                    show_secondary_image: section.settings.show_secondary_image | default: false,
                    show_vendor: section.settings.show_vendor | default: false,
                    show_rating: section.settings.show_rating | default: false 
                  %}
                </li>
              {% else %}
                <script>console.log('Product not found for ID:', '{{ product_id }}');</script>
              {% endif %}
            {% endif %}
          {% endfor %}
          
          {% comment %} If no products were rendered, show a message {% endcomment %}
          {% if product_ids.size == 0 %}
            <li class="grid__item">
              <div class="card-wrapper">
                <div class="card">
                  <div class="card__content">
                    <div class="card__information">
                      <p>No recommended products found for this category.</p>
                    </div>
                  </div>
                </div>
              </div>
            </li>
          {% endif %}
        </ul>
      </div>
    </div>

  {% endif %}
{% endif %}

