  "blocks": [
    {
      "type": "filter",
      "name": "Filter Tag",
      "settings": [
        {
          "type": "text",
          "id": "tag",
          "label": "Tag"
        },
        {
          "type": "image_picker",
          "id": "banner_image",
          "label": "Banner Image"
        },
        {
          "type": "color",
