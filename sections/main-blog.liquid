{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- paginate blog.articles by 6 -%}
  <div class="main-blog page-width section-{{ section.id }}-padding">
    <h1 class="title--primary{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      {{ blog.title | escape }}
    </h1>

    {%- if request.path == '/blogs/recipes' -%}
      <div class="blog-filter-wrapper">
        <div class="blog-filter">
          {% for block in section.blocks %}
            {% assign tag = block.settings.tag %}
            {% assign banner_image = block.settings.banner_image %}
            {% assign banner_color = block.settings.banner_color %}
            {% assign is_active = false %}
            {% if current_tags contains tag %}
              {% assign is_active = true %}
            {% endif %}
            <a
              href="{% if is_active %}/blogs/recipes{% else %}/blogs/recipes/tagged/{{ tag | handle }}{% endif %}"
              class="blog-filter__item{% if is_active %} blog-filter__item--active{% endif %}"
              style="background-color: {% if is_active %}{{ banner_color }}{% else %}#f5f5f8{% endif %};"
            >
              {{ tag }}
            </a>
          {% endfor %}
        </div>
        {% for block in section.blocks %}
          {% if current_tags contains block.settings.tag %}
            <div class="blog-filter__banner" style="background-color: {{ block.settings.banner_color }};">
              {% if block.settings.banner_image != blank %}
                <img src="{{ block.settings.banner_image | img_url: 'master' }}" alt="{{ block.settings.tag }}">
              {% endif %}
              <h2>{{ block.settings.headline }}</h2>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {%- endif -%}
    <div class="main-blog-recipekit-grid">
      {%- for article in blog.articles -%}
        {%- assign rk_resource_id = article.id | downcase -%}
        {%- assign rk_mf = article.metafields.recipekit[rk_resource_id] -%}
        <div class="recipekit-card-outer">
          <a href="{{ article.url }}" class="recipekit-card-link" aria-label="{{ article.title | escape }}">
            <div class="recipekit-card">
              <div class="recipekit-card-image-wrapper">
                {%- if rk_mf and rk_mf.recipe_image != blank -%}
                  {%- assign image_url = rk_mf.recipe_image -%}
                  {%- if image_url contains 'cloudinary.com' -%}
                    {%- assign rk_last_url = image_url | split: 'upload/' -%}
                    {%- assign card_image = rk_last_url[1] | prepend: 'https://res.cloudinary.com/hsxfx8igq/image/upload/t_1x1_recipe_image,f_auto/' -%}
                  {%- elsif image_url contains 'backblazeb2.com' -%}
                    {%- assign rk_last_url = image_url | split: 'backblazeb2.com/file/recipekit-bucket/' -%}
                    {%- assign card_image = 'https://images.getrecipekit.com/' | append: rk_last_url[1] | append: '?aspect_ratio=1:1&quality=90&' -%}
                  {%- elsif image_url contains 'cdn.shopify.com' -%}
                    {%- assign card_image = image_url | append: '&width=1000&height=1000' -%}
                  {%- else -%}
                    {%- assign card_image = image_url -%}
                  {%- endif -%}
                  <img class="recipekit-card-image" src="{{ card_image }}" alt="{{ article.title | escape }}" loading="lazy">
                {%- elsif article.image -%}
                  <img class="recipekit-card-image" src="{{ article.image | img_url: '1000x1000', scale: 2 }}" alt="{{ article.title | escape }}" loading="lazy">
                {%- endif -%}
                {%- if rk_mf and rk_mf.prep_time != blank -%}
                  <span class="recipekit-prep-time">{{ rk_mf.prep_time }}</span>
                {%- endif -%}
              </div>
            </div>
          </a>
          <div class="recipekit-card-meta">
            {%- if rk_mf and rk_mf.recipe_category != blank -%}
              <span class="recipekit-category-badge">{{ rk_mf.recipe_category }}</span>
            {%- endif -%}
            <a href="{{ article.url }}" class="recipekit-card-title-link"><div class="recipekit-card-title">{{ article.title }}</div></a>
          </div>
        </div>
      {%- endfor -%}
    </div>

    {%- if paginate.pages > 1 -%}
      {%- render 'pagination', paginate: paginate -%}
    {%- endif -%}
  </div>
{%- endpaginate -%}

<style>
.blog-filter-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32px;
}

.blog-filter {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  margin-bottom: 24px;
  align-items: center;
  justify-content: center;
}

.blog-filter__item {
  display: inline-flex;
  align-items: center;
  padding: 8px 18px;
  border-radius: 20px;
  background: #f5f5f8;
  color: #3d174f;
  text-decoration: none;
  font-weight: 500;
  font-size: 15px;
  transition: background 0.15s, color 0.15s;
  border: 1.5px solid transparent;
  cursor: pointer;
}

.blog-filter__item span {
  margin-left: 8px;
  font-size: 13px;
  color: #888;
}

.blog-filter__item--active {
  background: #3d174f;
  color: #fff;
  border-color: #3d174f;
}

.blog-filter__item--active span {
  color: #fff;
}

.blog-filter__banner {
  display: flex;
  align-items: center;
  gap: 18px;
  margin-bottom: 28px;
  padding: 18px 28px;
  border-radius: 12px;
  background: #f5f5f8;
}

.blog-filter__banner img {
  width: 60px;
  height: 60px;
  object-fit: cover;
  border-radius: 8px;
}

.blog-filter__banner h2 {
  margin: 0;
  font-size: 1.5em;
  font-weight: 700;
  color: #3d174f;
}
</style>

{%- if request.path == '/blogs/recipes' -%}
  <div class="blog-filter">
    {% for block in section.blocks %}
      {% assign tag = block.settings.tag %}
      {% assign banner_image = block.settings.banner_image %}
      {% assign banner_color = block.settings.banner_color %}
      {% assign headline = block.settings.headline %}
      {% assign is_active = false %}
      {% if current_tags contains tag %}
        {% assign is_active = true %}
      {% endif %}
      <a
        href="{% if is_active %}/blogs/recipes{% else %}/blogs/recipes/tagged/{{ tag | handle }}{% endif %}"
        class="blog-filter__item{% if is_active %} blog-filter__item--active{% endif %}"
        style="background-color: {% if is_active %}{{ banner_color }}{% else %}#f5f5f8{% endif %};"
      >
        {{ tag }}{% if headline != blank %} <span>{{ headline }}</span>{% endif %}
      </a>
    {% endfor %}
  </div>
  {% comment %} Optionally, display the banner for the active tag: {% endcomment %}
  {% for block in section.blocks %}
    {% if current_tags contains block.settings.tag %}
      <div class="blog-filter__banner" style="background-color: {{ block.settings.banner_color }};">
        {% if block.settings.banner_image != blank %}
          <img src="{{ block.settings.banner_image | img_url: 'master' }}" alt="{{ block.settings.tag }}">
        {% endif %}
        <h2>{{ block.settings.headline }}</h2>
      </div>
    {% endif %}
  {% endfor %}
{%- endif -%}

