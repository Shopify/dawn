{% if customer.metafields['app--1576377--loyalty'].vip_tier_name == blank %}

<div class="container mx-auto">
  <div class="text-center py-8">
    <h1 class="text-xl mb-0">{{ section.settings.row_heading }}</h1>
    <div class="mt-16 flex flex-col gap-20 sm:gap-8 sm:flex-row sm:justify-center">
      <div class="w-full">
        <div class="text-lg font-bold bg-black rounded-full mx-auto size-25 text-white flex justify-center items-center">1</div>
        <p class="mt-10 text-lg text-black font-bold uppercase">{{ section.settings.column_1_heading }}</p>
        <p class="mt-10 w-60 mx-auto text-sm text-black">{{ section.settings.column_1_paragraph }}</p>
      </div>
      <div class="w-full">
        <div class="text-lg font-bold bg-black rounded-full mx-auto size-25 text-white flex justify-center items-center">2</div>
