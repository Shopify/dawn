        <p class="mt-10 w-60 mx-auto text-sm text-black">{{ section.settings.column_2_paragraph }}</p>
      </div>
      <div class="w-full">
        <div class="text-lg font-bold bg-black rounded-full mx-auto size-25 text-white flex justify-center items-center">3</div>
        <p class="mt-10 text-lg text-black font-bold uppercase">{{ section.settings.column_3_heading }}</p>
        <p class="mt-10 w-60 mx-auto text-sm text-black">{{ section.settings.column_3_paragraph }}</p>
      </div>
    </div>    
  </div>
</div>

{% endif %}

