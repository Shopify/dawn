{% schema %}
{
  "name": "Mission Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Mission"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "column_image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "column_title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "column_subtitle",
          "label": "Subtitle"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Mission Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="mission-section">
  <div class="mission-content">
    <div class="mission-image">
      <img width="100px" height="100px" src="{{ section.settings.image | img_url }}" alt="Mission Image">
    </div>
    <div class="mission-text">
      <h2>{{ section.settings.title }}</h2>
      <p>{{ section.settings.description }}</p>
    </div>
  </div>

  <div class="mission-columns">
    {% for block in section.blocks %}
      <div class="mission-column">
        <img width="100px" height="100px" src="{{ block.settings.column_image | img_url }}" alt="Column Image">
        <h3>{{ block.settings.column_title }}</h3>
        <p>{{ block.settings.column_subtitle }}</p>
      </div>
    {% endfor %}
  </div>
</section>
