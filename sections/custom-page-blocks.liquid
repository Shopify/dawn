                        src="{{ img_url }}"
                        alt="{{ block.settings.retreat1_image.alt | escape }}"
                        loading="lazy"
                        width="{{ block.settings.retreat1_image.width }}"
                        height="{{ block.settings.retreat1_image.height }}"
                      >
                    </div>
                  </a>
                {% endif %}
                <div class="retreats-grid__info">
                  <div class="retreats-grid__left">
                    <h2 class="retreats-grid__title">{{ block.settings.retreat1_title }}</h2>
                    <a href="{{ block.settings.retreat1_url }}" class="retreats-grid__link">
                      {{- 'sections.custom_page_blocks.read_more' | t -}}
                    </a>
                  </div>
                  <div class="retreats-grid__right">
                    <div class="retreats-grid__location">{{ block.settings.retreat1_location }}</div>
                    <div class="retreats-grid__date">{{ block.settings.retreat1_date }}</div>
                  </div>
                </div>
              </div>

              <div class="retreats-grid__item">
                {% if block.settings.retreat2_image != blank %}
