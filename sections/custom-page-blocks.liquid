            {% endif %}
            <div class="retreats-grid">
              <div class="retreats-grid__item">
                {% if block.settings.retreat1_image != blank %}
                  <a href="{{ block.settings.retreat1_url }}" class="retreats-grid__image-link">
                    <div class="retreats-grid__image">
                      {% assign img_url = block.settings.retreat1_image | img_url: '1600x' %}
