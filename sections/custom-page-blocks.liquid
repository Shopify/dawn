<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Initialize logo grid scrolling
    const logoGrids = document.querySelectorAll('.page-block--logo-grid');
    logoGrids.forEach((grid) => {
      const scrollSpeed = grid.getAttribute('data-scroll-speed') || 40;
      grid.style.setProperty('--scroll-duration', `${scrollSpeed}s`);
    });

    // Initialize slideshows
    const slideshows = document.querySelectorAll('.page-block__slideshow');

    slideshows.forEach((slideshow) => {
      const block = slideshow.closest('.page-block--about-collapsible');
      const slideItems = slideshow.querySelectorAll('.page-block__slideshow-item');

      if (slideItems.length <= 1) return; // Don't set up slideshow if only one image

      // Get the slideshow speed from the data attribute or use default
      const speed =
        block && block.hasAttribute('data-block-id')
          ? parseInt(block.getAttribute('data-slideshow-speed') || 5) * 1000
          : 5000;

      let currentSlide = 0;

      // Set the first slide as active if not already
      slideItems.forEach((item, index) => {
        if (index === 0) {
          item.classList.add('active');
        } else {
          item.classList.remove('active');
        }
      });

      // Function to change slides
      function nextSlide() {
        // Remove active class from current slide
        slideItems[currentSlide].classList.remove('active');

        // Move to next slide or back to first slide
        currentSlide = (currentSlide + 1) % slideItems.length;

        // Add active class to new current slide
        slideItems[currentSlide].classList.add('active');
      }

      // Start the slideshow interval
      setInterval(nextSlide, speed);
    });

    // Initialize archive events hover functionality
    const archiveBlocks = document.querySelectorAll('.page-block--archive-events');

    archiveBlocks.forEach((block) => {
      const events = block.querySelectorAll('.archive-event');
      const eventImages = block.querySelectorAll('.page-block__event-image');

      // Show first image by default
      if (eventImages.length > 0) {
        eventImages.forEach((img) => {
          img.classList.remove('active');
        });
        eventImages[0].classList.add('active');
      }

      // Add hover event listeners to events
      events.forEach((event) => {
        const imageId = event.getAttribute('data-image-id');
        const imageElement = imageId ? document.getElementById(imageId) : null;

        event.addEventListener('mouseenter', function () {
          // Hide all images
          eventImages.forEach((img) => {
            img.classList.remove('active');
          });

          // Show the corresponding image
          if (imageElement) {
            imageElement.classList.add('active');
          } else {
            // If no image for this event, show the first image
            if (eventImages.length > 0) {
              eventImages[0].classList.add('active');
            }
          }
        });

        // When mouse leaves all events, show the first image
        event.addEventListener('mouseleave', function () {
          // Delay hiding to avoid flickering when moving between events
          setTimeout(() => {
            // Check if mouse is over any event
            const isHovering = Array.from(events).some((e) => e.matches(':hover'));

            if (!isHovering) {
              // Hide all images
              eventImages.forEach((img) => {
                img.classList.remove('active');
              });

              // Show the first image
              if (eventImages.length > 0) {
                eventImages[0].classList.add('active');
              }
            }
          }, 50);
        });
      });
    });
  });
</script>
