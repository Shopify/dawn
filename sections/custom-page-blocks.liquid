{{ 'section-custom-page-blocks.css' | asset_url | stylesheet_tag }}

<div class="page-width page-blocks{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'image_with_embed' %}
        <div class="page-block page-block--image-with-embed" {{ block.shopify_attributes }}>
          <div class="page-block__content">
            {% if block.settings.heading != blank %}
              <h2 class="page-block__heading h1">{{ block.settings.heading }}</h2>
            {% endif %}
            <div class="page-block__columns">
              <div class="page-block__column page-block__column--embed">
                <div class="page-block__embed">
                  {% if block.settings.embed_code != blank %}
                    {{ block.settings.embed_code }}
                  {% else %}
                    <div class="page-block__placeholder">
                      <p>{{ 'sections.custom_page_blocks.placeholder' | t }}</p>
                    </div>
                  {% endif %}
                </div>
              </div>
              <div class="page-block__column page-block__column--images">
                <div class="page-block__images">
                  {% if block.settings.image1 != blank %}
                    <div class="page-block__image">
                      {% assign img_url = block.settings.image1 | img_url: '800x' %}
                      <img
                        srcset="{{ img_url }} 1x, {{ block.settings.image1 | img_url: '800x', scale: 2 }} 2x"
                        src="{{ img_url }}"
                        alt="{{ block.settings.image1.alt | escape }}"
                        loading="lazy"
                        width="{{ block.settings.image1.width }}"
                        height="{{ block.settings.image1.height }}"
                      >
                    </div>
                  {% endif %}
                  {% if block.settings.image2 != blank %}
                    <div class="page-block__image">
                      {% assign img_url = block.settings.image2 | img_url: '800x' %}
                      <img
                        srcset="{{ img_url }} 1x, {{ block.settings.image2 | img_url: '800x', scale: 2 }} 2x"
                        src="{{ img_url }}"
                        alt="{{ block.settings.image2.alt | escape }}"
                        loading="lazy"
                        width="{{ block.settings.image2.width }}"
                        height="{{ block.settings.image2.height }}"
                      >
                    </div>
                  {% endif %}
                  {% if block.settings.image3 != blank %}
                    <div class="page-block__image">
                      {% assign img_url = block.settings.image3 | img_url: '800x' %}
                      <img
                        srcset="{{ img_url }} 1x, {{ block.settings.image3 | img_url: '800x', scale: 2 }} 2x"
                        src="{{ img_url }}"
                        alt="{{ block.settings.image3.alt | escape }}"
                        loading="lazy"
                        width="{{ block.settings.image3.width }}"
                        height="{{ block.settings.image3.height }}"
                      >
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      {% when 'embed_widget' %}
        <div class="page-block page-block--embed-widget" {{ block.shopify_attributes }}>
          <div class="page-block__content">
            {% if block.settings.heading != blank %}
              <h2 class="page-block__heading h1">{{ block.settings.heading }}</h2>
            {% endif %}
            <div class="page-block__embed">
              {% if block.settings.embed_code != blank %}
                {{ block.settings.embed_code }}
              {% else %}
                <div class="page-block__placeholder">
                  <p>{{ 'sections.custom_page_blocks.placeholder' | t }}</p>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% when 'rich_text' %}
        <div class="page-block page-block--rich-text" {{ block.shopify_attributes }}>
          <div class="page-block__content">
            {% if block.settings.heading != blank %}
              <h2 class="page-block__heading h1">{{ block.settings.heading }}</h2>
            {% endif %}
            {% if block.settings.text != blank %}
              <div class="page-block__text rte">
                {{ block.settings.text }}
              </div>
            {% endif %}
          </div>
        </div>
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Page Blocks",
  "tag": "section",
  "class": "section",
  "settings": [],
  "blocks": [
    {
      "type": "image_with_embed",
      "name": "Image with Embed",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Schedule - See you on the mat"
        },
        {
          "type": "liquid",
          "id": "embed_code",
          "label": "Embed code",
          "info": "Add your embedded widget code"
        },
        {
          "type": "image_picker",
          "id": "image1",
          "label": "Image 1"
        },
        {
          "type": "image_picker",
          "id": "image2",
          "label": "Image 2"
        },
        {
          "type": "image_picker",
          "id": "image3",
          "label": "Image 3"
        }
      ]
    },
    {
      "type": "embed_widget",
      "name": "Embed Widget",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "liquid",
          "id": "embed_code",
          "label": "Embed code",
          "info": "Add your embedded widget code"
        }
      ]
    },
    {
      "type": "rich_text",
      "name": "Rich Text",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Page Blocks",
      "blocks": [
        {
          "type": "rich_text"
        }
      ]
    }
  ]
}
{% endschema %}
