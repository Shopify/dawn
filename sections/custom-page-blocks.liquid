    {% case block.type %}
      {% when 'archive_events' %}
        <div class="page-block page-block--archive-events" {{ block.shopify_attributes }}>
          <div class="page-block__content">
            {% if block.settings.heading != blank %}
              <h1 class="page-block__heading">{{ block.settings.heading }}</h1>
            {% endif %}
            <div class="page-block__columns">
              <div class="page-block__column page-block__column--events">
                <div class="archive-events">
                  {% for i in (1..9) %}
                    {% assign event_title_key = 'event' | append: i | append: '_title' %}
                    {% assign event_description_key = 'event' | append: i | append: '_description' %}
                    {% assign event_image_key = 'event' | append: i | append: '_image' %}

                    {% assign event_title = block.settings[event_title_key] %}
                    {% assign event_description = block.settings[event_description_key] %}
                    {% assign event_image = block.settings[event_image_key] %}

                    {% if event_title != blank %}
                      <div class="archive-event" data-image-id="Event-Image-{{ i }}-{{ block.id }}">
                        <div class="archive-event__title">{{ event_title }}</div>
                        <div class="archive-event__description">{{ event_description }}</div>
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
              <div class="page-block__column page-block__column--images">
                <div class="page-block__event-images">
                  {% for i in (1..9) %}
                    {% assign event_image_key = 'event' | append: i | append: '_image' %}
                    {% assign event_title_key = 'event' | append: i | append: '_title' %}

                    {% assign event_image = block.settings[event_image_key] %}
                    {% assign event_title = block.settings[event_title_key] %}

                    {% if event_image != blank %}
                      <div
                        class="page-block__event-image{% if forloop.first %} active{% endif %}"
                        id="Event-Image-{{ i }}-{{ block.id }}"
                      >
                        {% assign img_url = event_image | img_url: '1600x' %}
                        <img
                          srcset="{{ img_url }} 1x, {{ event_image | img_url: '1600x', scale: 2 }} 2x"
                          src="{{ img_url }}"
                          alt="{{ event_title | escape }}"
                          loading="lazy"
                          width="{{ event_image.width }}"
                          height="{{ event_image.height }}"
                        >
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
            </div>
          </div>
        </div>
