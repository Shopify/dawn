{{ 'section-custom-page-blocks.css' | asset_url | stylesheet_tag }}

<div class="page-width page-blocks{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'image_with_embed' %}
        <div class="page-block page-block--image-with-embed" {{ block.shopify_attributes }}>
          <div class="page-block__content">
            <div class="page-block__columns">
              <div class="page-block__column page-block__column--images">
                <div class="page-block__images">
                  {% if block.settings.image1 != blank %}
                    <div class="page-block__image">
                      {% assign img_url = block.settings.image1 | img_url: '1600x' %}
                      <img
                        srcset="{{ img_url }} 1x, {{ block.settings.image1 | img_url: '1600x', scale: 2 }} 2x"
                        src="{{ img_url }}"
                        alt="{{ block.settings.image1.alt | escape }}"
                        loading="lazy"
                        width="{{ block.settings.image1.width }}"
                        height="{{ block.settings.image1.height }}"
                      >
                    </div>
                  {% endif %}
                </div>
              </div>
              <div class="page-block__column page-block__column--embed">
                {% if block.settings.heading != blank %}
                  <h1 class="page-block__heading">{{ block.settings.heading }}</h1>
                {% endif %}
                <div class="page-block__embed">
                  {% if block.settings.embed_code != blank %}
                    {{ block.settings.embed_code }}
                  {% else %}
                    <div class="page-block__placeholder">
                      <p>{{ 'sections.custom_page_blocks.placeholder' | t }}</p>
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      {% when 'embed_widget' %}
        <div class="page-block page-block--embed-widget" {{ block.shopify_attributes }}>
          <div class="page-block__content">
            {% if block.settings.heading != blank %}
              <h1 class="page-block__heading">{{ block.settings.heading }}</h1>
            {% endif %}
            <div class="page-block__embed">
              {% if block.settings.embed_code != blank %}
                {{ block.settings.embed_code }}
              {% else %}
                <div class="page-block__placeholder">
                  <p>{{ 'sections.custom_page_blocks.placeholder' | t }}</p>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% when 'rich_text' %}
        <div class="page-block page-block--rich-text" {{ block.shopify_attributes }}>
          <div class="page-block__content">
            {% if block.settings.heading != blank %}
              <h1 class="page-block__heading">{{ block.settings.heading }}</h1>
            {% endif %}
            {% if block.settings.text != blank %}
              <div class="page-block__text rte">
                {{ block.settings.text }}
              </div>
            {% endif %}
          </div>
        </div>
      {% when 'retreats_grid' %}
        <div class="page-block page-block--retreats-grid" {{ block.shopify_attributes }}>
          <div class="page-block__content">
            {% if block.settings.heading != blank %}
              <h1 class="page-block__heading">{{ block.settings.heading }}</h1>
            {% endif %}
            <div class="retreats-grid">
              <div class="retreats-grid__item">
                {% if block.settings.retreat1_image != blank %}
                  <a href="{{ block.settings.retreat1_url }}" class="retreats-grid__image-link">
                    <div class="retreats-grid__image">
                      {% assign img_url = block.settings.retreat1_image | img_url: '1600x' %}
                      <img
                        srcset="{{ img_url }} 1x, {{ block.settings.retreat1_image | img_url: '1600x', scale: 2 }} 2x"
                        src="{{ img_url }}"
                        alt="{{ block.settings.retreat1_image.alt | escape }}"
                        loading="lazy"
                        width="{{ block.settings.retreat1_image.width }}"
                        height="{{ block.settings.retreat1_image.height }}"
                      >
                    </div>
                  </a>
                {% endif %}
                <div class="retreats-grid__info">
                  <div class="retreats-grid__left">
                    <h2 class="retreats-grid__title">{{ block.settings.retreat1_title }}</h2>
                    <a href="{{ block.settings.retreat1_url }}" class="retreats-grid__link">
                      {{- 'sections.custom_page_blocks.read_more' | t -}}
                    </a>
                  </div>
                  <div class="retreats-grid__right">
                    <div class="retreats-grid__location">{{ block.settings.retreat1_location }}</div>
                    <div class="retreats-grid__date">{{ block.settings.retreat1_date }}</div>
                  </div>
                </div>
              </div>

              <div class="retreats-grid__item">
                {% if block.settings.retreat2_image != blank %}
                  <a href="{{ block.settings.retreat2_url }}" class="retreats-grid__image-link">
                    <div class="retreats-grid__image">
                      {% assign img_url = block.settings.retreat2_image | img_url: '1600x' %}
                      <img
                        srcset="{{ img_url }} 1x, {{ block.settings.retreat2_image | img_url: '1600x', scale: 2 }} 2x"
                        src="{{ img_url }}"
                        alt="{{ block.settings.retreat2_image.alt | escape }}"
                        loading="lazy"
                        width="{{ block.settings.retreat2_image.width }}"
                        height="{{ block.settings.retreat2_image.height }}"
                      >
                    </div>
                  </a>
                {% endif %}
                <div class="retreats-grid__info">
                  <div class="retreats-grid__left">
                    <h2 class="retreats-grid__title">{{ block.settings.retreat2_title }}</h2>
                    <a href="{{ block.settings.retreat2_url }}" class="retreats-grid__link">
                      {{- 'sections.custom_page_blocks.read_more' | t -}}
                    </a>
                  </div>
                  <div class="retreats-grid__right">
                    <div class="retreats-grid__location">{{ block.settings.retreat2_location }}</div>
                    <div class="retreats-grid__date">{{ block.settings.retreat2_date }}</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    {% endcase %}
  {% endfor %}
</div>

