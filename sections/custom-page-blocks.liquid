{{ 'section-custom-page-blocks.css' | asset_url | stylesheet_tag }}
{{ 'component-accordion.css' | asset_url | stylesheet_tag }}

<div class="page-width page-blocks{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'about_collapsible' %}
        <div
          class="page-block page-block--about-collapsible"
          {{ block.shopify_attributes }}
          data-slideshow-speed="{{ block.settings.slideshow_speed }}"
          data-block-id="{{ block.id }}"
        >
          <div class="page-block__content">
            <div class="page-block__columns">
              <div class="page-block__column page-block__column--images">
                <div class="page-block__slideshow">
                  {% if block.settings.image1 != blank %}
                    <div
                      class="page-block__slideshow-item{% if forloop.first %} active{% endif %}"
                      data-slide-index="0"
                    >
                      {% assign img_url = block.settings.image1 | img_url: '1600x' %}
                      <img
                        srcset="{{ img_url }} 1x, {{ block.settings.image1 | img_url: '1600x', scale: 2 }} 2x"
                        src="{{ img_url }}"
                        alt="{{ block.settings.image1.alt | escape }}"
                        loading="lazy"
                        width="{{ block.settings.image1.width }}"
                        height="{{ block.settings.image1.height }}"
                      >
                    </div>
                  {% endif %}
                  {% if block.settings.image2 != blank %}
                    <div class="page-block__slideshow-item" data-slide-index="1">
                      {% assign img_url = block.settings.image2 | img_url: '1600x' %}
                      <img
                        srcset="{{ img_url }} 1x, {{ block.settings.image2 | img_url: '1600x', scale: 2 }} 2x"
                        src="{{ img_url }}"
                        alt="{{ block.settings.image2.alt | escape }}"
                        loading="lazy"
                        width="{{ block.settings.image2.width }}"
                        height="{{ block.settings.image2.height }}"
                      >
                    </div>
                  {% endif %}
                  {% if block.settings.image3 != blank %}
                    <div class="page-block__slideshow-item" data-slide-index="2">
                      {% assign img_url = block.settings.image3 | img_url: '1600x' %}
                      <img
                        srcset="{{ img_url }} 1x, {{ block.settings.image3 | img_url: '1600x', scale: 2 }} 2x"
                        src="{{ img_url }}"
                        alt="{{ block.settings.image3.alt | escape }}"
                        loading="lazy"
                        width="{{ block.settings.image3.width }}"
                        height="{{ block.settings.image3.height }}"
                      >
                    </div>
                  {% endif %}
                </div>
              </div>
              <div class="page-block__column page-block__column--collapsible">
                {% if block.settings.heading != blank %}
                  <h1 class="page-block__heading">{{ block.settings.heading }}</h1>
                {% endif %}

                <div class="page-block__accordion-container">
                  {% if block.settings.row1_heading != blank %}
                    <div class="page-block__accordion accordion">
                      <details id="Details-Row1-{{ block.id }}">
                        <summary>
                          <div class="summary__title">
                            <h2 class="h4 accordion__title">{{ block.settings.row1_heading }}</h2>
                          </div>
                        </summary>
                        <div class="accordion__content rte" id="Row1-Content-{{ block.id }}">
                          {{ block.settings.row1_content }}
                        </div>
                      </details>
                    </div>
                  {% endif %}

                  {% if block.settings.row2_heading != blank %}
                    <div class="page-block__accordion accordion">
                      <details id="Details-Row2-{{ block.id }}">
                        <summary>
                          <div class="summary__title">
                            <h2 class="h4 accordion__title">{{ block.settings.row2_heading }}</h2>
                          </div>
                        </summary>
                        <div class="accordion__content rte" id="Row2-Content-{{ block.id }}">
                          {{ block.settings.row2_content }}
                        </div>
                      </details>
                    </div>
                  {% endif %}

                  {% if block.settings.row3_heading != blank %}
                    <div class="page-block__accordion accordion">
                      <details id="Details-Row3-{{ block.id }}">
                        <summary>
                          <div class="summary__title">
                            <h2 class="h4 accordion__title">{{ block.settings.row3_heading }}</h2>
                          </div>
                        </summary>
                        <div class="accordion__content rte" id="Row3-Content-{{ block.id }}">
                          {{ block.settings.row3_content }}
                        </div>
                      </details>
                    </div>
                  {% endif %}

                  {% if block.settings.row4_heading != blank %}
