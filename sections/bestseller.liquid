                          {% elsif product.metafields.global.productName.value %}
                            {{ product.metafields.global.productName.value | escape }}
                          {% elsif variant.name %}
                            {{ variant.name | remove: 'sleep.ink' }}
                          {% else %}
                            {{ product.title | remove: 'sleep.ink' }}
                          {% endif %}
