<div id="sidebar-cart" class="sidebar-cart">
  <div class="sidebar-cart__overlay" onclick="toggleSidebarCart()"></div>
  <div class="sidebar-cart__content">
    <div class="sidebar-cart__header">
      <h3>My cart</h3>
      <button class="sidebar-cart__close" onclick="toggleSidebarCart()">&#10094;</button>
    </div>

    {% if cart.item_count > 0 %}
      <!-- Progress bar for free shipping -->
      {% render 'shipping-bar' %}

      <div class="sidebar-cart__items" id="sidebar-cart-items">
        {% for item in cart.items %}
          {% render 'cart-item', item: item %}
        {% endfor %}
      </div>

      <div class="sidebar-cart__footer">
        <!-- Order note -->
        <div class="order-note">
          <button class="order-note__toggle" onclick="toggleOrderNote()">Add order note</button>
          <div class="order-note__content" id="order-note-content" style="display: none;">
            <textarea id="cart-note" placeholder="Special instructions for your order...">{{ cart.note }}</textarea>
            <button onclick="saveOrderNote()">Save note</button>
          </div>
        </div>

        <div class="cart-subtotal">
          <span>Subtotal</span>
          <span>{{ cart.total_price | money }}</span>
        </div>
        <a href="/checkout" class="checkout-button">Go to checkout</a>
      </div>
    {% else %}
      <div class="empty-cart">
        <p>Your cart is empty</p>
        <button class="continue-shopping" onclick="toggleSidebarCart()">Continue shopping</button>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .sidebar-cart {
    position: fixed;
    top: 0;
    right: -100%;
    width: 100%;
    height: 100%;
    z-index: 9999;
    transition: right 0.3s ease;
  }

  .sidebar-cart.active {
    right: 0;
  }

  .sidebar-cart__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
  }

  .sidebar-cart__content {
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    width: 430px;
    height: 100%;
    background: white;
    padding: 20px;
    display: flex;
    flex-direction: column;

    border-radius: 30px 0 0 30px;
    box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.4);
    background: #fff;
  }

  .sidebar-cart__header {
    display: flex;
    flex-direction: row-reverse;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;

    h3 {
      font-family: var(--font-family);
      font-weight: 600;
      font-size: 20px;
      color: #000;
      margin: 0 auto;
    }
  }

  .sidebar-cart__close {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
  }

  .free-shipping-bar {
    margin-bottom: 20px;
  }

  .progress-container {
    height: 5px;
    background: #e0e0e0;
    margin-bottom: 5px;
  }

  .progress-bar {
    height: 100%;
    background: #4caf50;
  }

  .sidebar-cart__items {
    flex-grow: 1;
    overflow-y: auto;
    margin-bottom: 20px;
  }

  .cart-subtotal {
    display: flex;
    justify-content: space-between;
    margin: 20px 0;
    font-weight: bold;
  }

  .checkout-button {
    border-radius: 8px;
    padding: 10px 20px;
    width: 390px;
    height: 55px;

    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.4);
    background: #93478f;

    font-family: var(--font-family);
    font-weight: 600;
    font-size: 20px;
    color: #fff;

    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
  }

  .empty-cart {
    text-align: center;
    margin-top: 50px;
  }

  .continue-shopping {
    margin-top: 20px;
    padding: 10px 20px;
    background: #000;
    color: white;
    border: none;
    cursor: pointer;
  }

  /* Mobile styles */
  @media (max-width: 767px) {
    .sidebar-cart__content {
      width: 85%;
    }
  }
</style>
