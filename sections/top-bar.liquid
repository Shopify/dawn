{% schema %}
{
  "name": "Top Bar",
  "settings": [
    {
      "type": "text",
      "id": "text_1",
      "label": "Text field 1",
      "default": "Free shipping on orders over $100"
    },
    {
      "type": "text",
      "id": "text_2",
      "label": "Text field 2",
      "default": "Call us: 1-800-123-456"
    },
    {
      "type": "text",
      "id": "text_3",
      "label": "Text field 3",
      "default": "Sign up for our newsletter!"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Top Bar â€“ 3 fields"
    }
  ]
}
{% endschema %}

{% if settings.header_bar_type == 'topbar' %}
<section 
  class="top-bar" 
  style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }}; padding: .5em 0;"
>
  <div class="container mx-auto flex justify-between items-center">
    <span>{{ section.settings.text_1 }}</span>
    <span>{{ section.settings.text_2 }}</span>
    <span>{{ section.settings.text_3 }}</span>
  </div>
</section>
{% endif %}
