{{ 'section-accordion-block.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
  <div class="{% if section.settings.small_wrapper %}accordion-small-wrapper{% endif %} page-width">
    {% for block in section.blocks %}
      <div class="accordion-block__item">
        <input type="checkbox" id="accordion-{{ section.id }}-{{ block.id }}" class="accordion-block__checkbox" hidden>
        <label
          class="accordion-block__trigger"
          for="accordion-{{ section.id }}-{{ block.id }}"
        >
          <span class="accordion-block__title {% if section.settings.uppercase_title %}accordion-uppercase{% endif %}">
            {{- block.settings.title -}}
          </span>
          <span class="accordion-block__icon"></span>
        </label>
        <p class="accordion-block__content {% if section.settings.uppercase_content %}accordion-uppercase{% endif %}">
          {{ block.settings.content }}
        </p>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Accordion Block",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "small_wrapper",
      "label": "Use small wrapper?",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "uppercase_title",
      "label": "Uppercase title?",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "uppercase_content",
      "label": "Uppercase content?",
      "default": false
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Accordion Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Accordion Title"
        },

        {
          "type": "textarea",
          "id": "content",
          "label": "Content",
          "default": "Accordion content goes here"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Accordion Block",
      "category": "Custom",
      "blocks": [{ "type": "item" }, { "type": "item" }]
    }
  ]
}
{% endschema %}
