{% style %}

  .shoplift-offerbar-wrapper {
    transition: all 0.3s ease-out;
  }

  .shoplift-offer--bar .offer__container {
    width: 100%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .shoplift-offer--bar .message__link {
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    flex: 1 0 auto
  }

  .shoplift-offer--bar .banner__heading {
    display: flex;
    align-items: center;
    margin: 0;
    padding: 0;
    flex-wrap: wrap;
    justify-content: center;
    text-align: center;
    line-height: 1;
  }

  .shoplift-offer--bar .banner__heading p {
    margin: 0;
    padding: 0;
  }
  
  .shoplift-offer--bar .message__link .arrow--caret {
    line-height: 0;
  }

  .shoplift-offer-bar-sticky {
    transition: all 0.15s ease-out;
    position: -webkit-sticky;
    position: sticky;
    top: 0;
    z-index: 3;
  }
  
  {% if section_settings.devices != "mobile" %}
    #shoplift--{{ section_id }} {
      display: block;
      width: 100%;
      margin: 0 auto;
    }
  {% else %}
    #shoplift--{{ section_id }} {
      display: none;
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    {% if section_settings.devices == "desktop" %}
      #shoplift--{{ section_id }} {
        display: none;
      }
    {% else %}
      #shoplift--{{ section_id }} {
        display: block;
        max-width: 100%;
        width: 100%;
      }
    {% endif %}
  }

  #shoplift--{{ section_id }} .message__link,
  #shoplift--{{ section_id }} .benefit__text-wrap {
    max-width: 100%;
  }

  #shoplift--{{ section_id }} .offer__container {
    padding: 0 10px;
  }

  #shoplift--{{ section_id }} .height__controller {
    {% case section_settings.bar_height %}
      {% when 'large' %}
        padding: 24px;
      {% when 'medium' %}
        padding: 16px;
      {% when 'small' %}
        padding: 8px;
    {% endcase %}
  }

  #shoplift--{{ section_id }} .banner__heading {
    {% case section_settings.text_size %}
      {% when "large" %}
        font-size: 20px;
      {% when "medium" %}
        font-size: 16px;
      {% when "small" %}
        font-size: 14px;
    {% endcase %}
  }

  #shoplift--{{ section_id }} .banner__heading .uil,
  #shoplift--{{ section_id }} .sl-arrow-caret {
    {% case section_settings.text_size %}
      {% when "large" %}
      font-size: 24px;
      {% when "medium" %}
      font-size: 18px;
      {% when "small" %}
      font-size: 16px;
    {% endcase %}
  }

  #shoplift--{{ section_id }} .sl-message-icon,
  #shoplift--{{ section_id }} .sl-arrow-caret
  {
    margin: 0 0.5em;
  }

  #shoplift--{{ section_id }} .sl-arrow-caret
  {
    overflow: hidden;
  }

  #shoplift--{{ section_id }} .sl-arrow-caret svg
  {
    height: 0.75em;
    transform: translateX(-0.25rem);
    transition: transform 0.1s ease;
  }

  #shoplift--{{ section_id }} a:hover .sl-arrow-caret svg
  {
    transform: translateX(-0.05rem);
  }


  {% unless section_settings.border_type == "brand_style" %}
    #shoplift--{{ section_id }}.sl-section {
      border-style: solid;
      border-color: currentColor;
      {% case section_settings.border_type %}
        {% when "bottom" %}
          border-width: 0 0 1px 0;
        {% when "all" %}
          border-width: 1px;
        {% when "none" %}
          border-width: 0;
      {% endcase %}
    }
  {% endunless %}

  {% unless universal_custom_colors == true %}
    @media screen and (min-width: 750px) {
  {% endunless %}
      /* Color overrides */
      {% unless section_settings.background_color == "transparent" or section_settings.background_color == "rgba(0,0,0,0)" %}
        #shoplift--{{ section_id }}.custom_bg {
          background-color: {{ section_settings.background_color }};
        }
      {% endunless %}

      {% unless section_settings.border_color == "transparent" or section_settings.border_color == "rgba(0,0,0,0)" %}
        {% unless section_Settings.border_type == "brand_style" %}
          #shoplift--{{ section_id }}.custom_border {
            border-color: {{ section_settings.border_color }};
          }
        {% endunless %}
      {% endunless %}

      {% unless section_settings.text_color == "transparent" or section_settings.text_color == "rgba(0,0,0,0)" %}
        #shoplift--{{ section_id }}.custom_color .banner__heading * {
          color: {{ section_settings.text_color }};
        }

        #shoplift--{{ section_id }}.custom_color .liftkit__slider_control svg,
        #shoplift--{{ section_id }}.custom_color .liftkit__slider_control svg path,
        #shoplift--{{ section_id }}.custom_color .message__link svg,
        #shoplift--{{ section_id }}.custom_color .message__link svg path,
        #shoplift--{{ section_id }}.custom_color .banner__heading svg,
        #shoplift--{{ section_id }}.custom_color .banner__heading svg path {
          fill: {{ section_settings.text_color }};
        }
      {% endunless %}
  {% unless universal_custom_colors == true %}
    }
  {% endunless %}

  @media screen and (max-width: 749px) {
    #shoplift--{{ section_id }} .height__controller {
      {% if section_settings.mobile_bar_height == "match_desktop" %}
        {% case section_settings.bar_height %}
          {% when "large" %}
            padding: 24px;
          {% when "medium" %}
            padding: 16px;
          {% when "small" %}
            padding: 8px;
        {% endcase %}
      {% else %}
        {% case section_settings.mobile_bar_height %}
          {% when "large" %}
            padding: 24px;
          {% when "medium" %}
            padding: 16px;
          {% when "small" %}
            padding: 8px;
        {% endcase %}
      {% endif %}
    }

    {% if section_settings.mobile_text_size != 'match_desktop' %}
      #shoplift--{{ section_id }} .banner__heading {
        {%- if section_settings.font_style == "body" -%}
          {% case section_settings.mobile_text_size %}
            {% when "large" %}
              font-size: 16px;
            {% when "medium" %}
              font-size: 14px;
            {% when "small" %}
              font-size: 12px;
          {% endcase %}
        {%- elsif section_settings.font_style == "heading" -%}
          {% case section_settings.mobile_text_size %}
            {% when "large" %}
              font-size: 16px;
            {% when "medium" %}
              font-size: 14px;
            {% when "small" %}
              font-size: 12px;
          {% endcase %}
        {% endif %}
      }

      #shoplift--{{ section_id }} .banner__heading .uil,
      #shoplift--{{ section_id }} .sl-arrow-caret {
        {%- if section_settings.font_style == "body" -%}
          {% case section_settings.mobile_text_size %}
            {% when "large" %}
              font-size: 18px;
            {% when "medium" %}
              font-size: 16px;
            {% when "small" %}
              font-size: 14px;
          {% endcase %}
        {%- elsif section_settings.font_style == "heading" -%}
          {% case section_settings.mobile_text_size %}
            {% when "large" %}
              font-size: 18px;
            {% when "medium" %}
              font-size: 16px;
            {% when "small" %}
              font-size: 14px;
          {% endcase %}
        {% endif %}
      }
    {% else %}
      #shoplift--{{ section_id }} .banner__heading {
        {%- if section_settings.font_style == "body" -%}
          {% case section_settings.text_size %}
            {% when "large" %}
              font-size: 16px;
            {% when "medium" %}
              font-size: 14px;
            {% when "small" %}
              font-size: 12px;
          {% endcase %}
        {%- elsif section_settings.font_style == "heading" -%}
          {% case section_settings.text_size %}
            {% when "large" %}
              font-size: 16px;
            {% when "medium" %}
              font-size: 14px;
            {% when "small" %}
              font-size: 12px;
          {% endcase %}
        {% endif %}
      }

      #shoplift--{{ section_id }} .banner__heading .uil,
      #shoplift--{{ section_id }} .sl-arrow-caret {
        {%- if section_settings.font_style == "body" -%}
          {% case section_settings.text_size %}
            {% when "large" %}
              font-size: 18px;
            {% when "medium" %}
              font-size: 16px;
            {% when "small" %}
              font-size: 14px;
          {% endcase %}
        {%- elsif section_settings.font_style == "heading" -%}
          {% case section_settings.text_size %}
            {% when "large" %}
              font-size: 18px;
            {% when "medium" %}
              font-size: 16px;
            {% when "small" %}
              font-size: 14px;
          {% endcase %}
        {% endif %}
      }
    {% endif %}
  }

  #shoplift--{{ section_id }} .banner__heading__stars {
    margin-right: 5px;
    display: flex;
    align-items: center;
  }

  #shoplift--{{ section_id }} .banner__heading__stars .svg {
    {% case section_settings.text_size %}
      {% when "large" %}
        width: 24px;
        height: 24px;
      {% when "medium" %}
        width: 18px;
        height: 18px;
      {% when "small" %}
        width: 16px;
        height: 16px;
    {% endcase %}
  }

  #shoplift--{{ section_id }} .offer-bar__content--border-bottom {
    border-bottom: 1px solid;
  }

  #shoplift--{{ section_id }} .banner__heading__cta {
    text-decoration: underline;
    font-weight: bold;
    margin-left: 5px;
  }

  #shoplift--{{ section_id }} .banner__heading__cta--uppercase {
    text-transform: uppercase;
  }

  @media (max-width: 767px) {
    #shoplift--{{ section_id }} .banner__heading__stars .svg {
      {% if section_settings.mobile_text_size == 'match_desktop' %}
        {% case section_settings.text_size %}
          {% when "large" %}
            width: 18px;
            height: 18px;
          {% when "medium" %}
            width: 16px;
            height: 16px;
          {% when "small" %}
            width: 14px;
            height: 14px;
        {% endcase %}
      {% else %}
        {% case section_settings.mobile_text_size %}
          {% when "large" %}
            width: 18px;
            height: 18px;
          {% when "medium" %}
            width: 16px;
            height: 16px;
          {% when "small" %}
            width: 14px;
            height: 14px;
        {% endcase %}
      {% endif %}
    }

    .benefit__text-wrap--show-desktop {
      display: none;
    }

    .benefit__text-wrap--show-mobile {
      display: block;
    }
  }

  @media (min-width: 750px) {
    .benefit__text-wrap--show-mobile {
      display: none;
    }
  }
{% endstyle %}
