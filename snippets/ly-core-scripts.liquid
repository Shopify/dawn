                    var locale_code = selector.options[selector.selectedIndex].value;
                    langify.helper.setCookie('ly-lang-selected', locale_code, 365);
                  };        
                }
              }
            }
          }
        });
      });
      geolocationObserver.observe(target, config);
      setTimeout(function() {
        geolocationObserver.disconnect();
      }, 10000);
    }
  };

