<style>
    strong {
        font-family: "Avantt Semibold"
    }
</style>
{%- if settings.customFont_body == 'Avantt-lig' -%}
{% style %}
    body,p,a,button  {
    font-family:"Avantt Light";
    }
{% endstyle %}
{%- elsif settings.customFont_body == 'Avantt-reg' -%}
{% style %}
     body,p,a,button   {
        font-family:"Avantt Regular";
    }
{% endstyle %}
{%- elsif settings.customFont_body == 'Avantt-semi' -%}
{% style %}
     body,p,a,button   {
        font-family:"Avantt SemiBold";
    }
{% endstyle %}
{%- elsif settings.customFont_body == 'Avantt-bol' -%}
{% style %}
     body,p,a,button   {
        font-family:"Avantt Bold";
    }
{% endstyle %}
{%- elsif settings.customFont_body == 'FKScreamer-reg' -%}
{% style %}
     body,p,a,button   {
        font-family:"FKScreamer Regular";
    }
{% endstyle %}
{%- elsif settings.customFont_body == 'FKScreamer-med' -%}
{% style %}
     body,p,a,button   {
        font-family:"FKScreamer Medium";
    }
{% endstyle %}
{%- elsif settings.customFont_body == 'FKScreamer-bol' -%}
{% style %}
     body,p,a,button   {
        font-family:"FKScreamer Bold";
    }
{% endstyle %}
{%- elsif settings.customFont_body == 'FKScreamer-bla' -%}
{% style %}
     body,p,a,button   {
        font-family:"FKScreamer Black";
    }
{% endstyle %}

{%- endif -%}
