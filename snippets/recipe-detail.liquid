      <!-- Quadrant 2: Top right - Product Image -->
      <div class="recipe-image-container">
        <img
          class="recipe-image"
          src="{{ recipe.image | default: 'https://images.unsplash.com/photo-1600891964092-4316c288032e?q=80&w=1200&h=1200&auto=format&fit=crop' }}"
          alt="{{ recipe.title | default: 'Filet Mignon with Herb Butter' }}"
          width="1200"
          height="1200"
        >
      </div>

      <!-- Quadrant 3: Bottom left - Ingredients -->
      <div class="recipe-ingredients">
        <h2 class="recipe-section-title">Ingredients</h2>
        <ul class="ingredients-list">
          {% if recipe.ingredients %}
            {% for ingredient in recipe.ingredients %}
              <li class="ingredient-item">{{ ingredient }}</li>
            {% endfor %}
          {% else %}
            <li class="ingredient-item">2 (6-8 oz) filet mignon steaks, about 1½ inches thick</li>
            <li class="ingredient-item">2 tablespoons olive oil</li>
            <li class="ingredient-item">1 tablespoon kosher salt</li>
            <li class="ingredient-item">1 teaspoon freshly ground black pepper</li>
            <li class="ingredient-item">2 sprigs fresh rosemary</li>
            <li class="ingredient-item">4 tablespoons unsalted butter, softened</li>
            <li class="ingredient-item">1 tablespoon fresh parsley, finely chopped</li>
            <li class="ingredient-item">1 clove garlic, minced</li>
            <li class="ingredient-item">1 teaspoon lemon zest</li>
          {% endif %}
        </ul>
      </div>

      <!-- Quadrant 4: Bottom right - Instructions -->
      <div class="recipe-instructions">
        <h2 class="recipe-section-title">Instructions</h2>
        <ol class="instructions-list">
          {% if recipe.instructions %}
            {% for instruction in recipe.instructions %}
              <li class="instruction-item">
                <p class="instruction-text">{{ instruction }}</p>
              </li>
            {% endfor %}
          {% else %}
            <li class="instruction-item">
              <p class="instruction-text">
